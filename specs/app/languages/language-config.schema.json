      "flag": "ðŸ‡¸ðŸ‡¦"
    }
  ],
  "x-specs": [
    {
      "id": "APP-LANGUAGES-CONFIG-001",
      "given": "a language config for English (en)",
      "when": "language is defined with code, label, and locale",
      "then": "it should be valid with LTR direction by default",
      "validation": {
        "setup": {
          "language": {
            "code": "en",
            "label": "English",
            "locale": "en-US"
          }
        },
        "assertions": [
          "Code: 'en' (short code for URLs/routing)",
          "Locale: 'en-US' (full locale for HTML lang attribute)",
          "Label: 'English' (human-readable)",
          "Direction: defaults to 'ltr' (left-to-right)"
        ]
      },
      "application": {
        "language": {
          "code": "en",
          "label": "English",
          "locale": "en-US"
        },
        "component": "html",
        "expectedDOM": "<html lang=\"en-US\" dir=\"ltr\"><body>...</body></html>",
        "assertions": [
          "Code used for URLs: /en/ (short code)",
          "Locale used for HTML lang: lang=\"en-US\" (full locale)",
          "Direction defaults to 'ltr' when not specified",
          "HTML dir attribute: dir=\"ltr\" (explicit left-to-right)",
          "Text flows left-to-right (standard Latin script)",
          "UI elements aligned left (menus, navigation, forms)",
          "Required fields: code + label + locale"
        ]
      }
    },
    {
      "id": "APP-LANGUAGES-CONFIG-002",

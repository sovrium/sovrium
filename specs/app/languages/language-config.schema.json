{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "language-config.schema.json",
  "title": "Language Configuration",
  "description": "Configuration for a single supported language",
  "type": "object",
  "properties": {
    "code": {
      "type": "string",
      "pattern": "^[a-z]{2}$",
      "description": "Short language code used for URLs and routing (ISO 639-1, 2 letters)",
      "examples": ["en", "fr", "es", "de", "ar", "he"]
    },
    "locale": {
      "type": "string",
      "pattern": "^[a-z]{2}-[A-Z]{2}$",
      "description": "Full locale code used for HTML lang attribute and locale-specific formatting (e.g., 'en-US', 'fr-FR', 'es-ES')",
      "examples": ["en-US", "fr-FR", "es-ES", "de-DE", "ar-SA", "he-IL"]
    },
    "label": {
      "type": "string",
      "description": "Human-readable language name",

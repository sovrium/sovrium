{
  "$id": "name.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "../../common/definitions.schema.json#/definitions/name",
  "title": "Table Name",
  "description": "Name of the database table",
  "placeholder": "Enter table name",
  "examples": ["users", "products", "orders", "customers"],
  "pattern": "^[a-z][a-z0-9_]*$",
  "help": "Use lowercase letters, numbers, and underscores. Must start with a letter.",
  "x-specs": [
    {
      "id": "APP-TABLES-NAME-001",
      "given": "user configures name",
      "when": "validating input",
      "then": "value should meet schema requirements",
      "validation": {
        "setup": {
          "fieldConfig": {
            "name": "example_field",
            "type": "text"
          }
        },
        "assertions": [
          {
            "description": "value should meet schema requirements",
            "validateConfig": true,
            "expectError": "validation error"
          }
        ]
      }
    },
    {
      "id": "APP-TABLES-NAME-002",
      "given": "name is set",
      "when": "processing configuration",
      "then": "value should be used correctly",
      "validation": {
        "setup": {
          "fieldConfig": {
            "name": "example_field",
            "type": "text"
          }
        },
        "assertions": [
          {
            "description": "value should be used correctly",
            "validateConfig": true,
            "expectError": "validation error"
          }
        ]
      }
    }
  ]
}

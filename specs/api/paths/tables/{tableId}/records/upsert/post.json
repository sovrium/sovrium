{
  "summary": "Upsert records (create or update)",
  "description": "Create or update multiple records in a single transaction based on merge fields. If a record matching the specified fields exists, it is updated; otherwise, it is created. All records are validated before upsert. If any validation fails, the entire operation is rolled back. Maximum 1000 records per request.",
  "operationId": "upsertRecords",
  "tags": ["Records"],
  "parameters": [
    {
      "name": "tableId",
      "in": "path",
      "required": true,
      "description": "Table identifier (tbl_XXXXX)",
      "schema": {
        "type": "string",
        "pattern": "^tbl_[a-zA-Z0-9]+$"
      }
    }
  ],
  "requestBody": {
    "required": true,
    "content": {
      "application/json": {
        "schema": {
          "type": "object",
          "properties": {
            "records": {
              "type": "array",
              "description": "Array of records to upsert (max 1000)",
              "minItems": 1,
              "maxItems": 1000,
              "items": {
                "type": "object",
                "description": "Record data (dynamic schema based on table fields)",
                "additionalProperties": true
              }
            },
            "fieldsToMergeOn": {
              "type": "array",
              "description": "Field names to match existing records (e.g., ['email'] or ['email', 'externalId']). REQUIRED - no defaults.",
              "minItems": 1,
              "items": {
                "type": "string"
              }
            },
            "returnRecords": {
              "type": "boolean",
              "description": "If true, return created/updated records in response. If false, only return count metadata.",
              "default": true
            }
          },
          "required": ["records", "fieldsToMergeOn"]
        },
        "example": {
          "records": [
            {
              "email": "john@example.com",
              "name": "John Doe",
              "status": "active"
            },
            {
              "email": "jane@example.com",
              "name": "Jane Smith",
              "status": "active"
            }
          ],
          "fieldsToMergeOn": ["email"],
          "returnRecords": true
        }
      }
    }
  },
  "responses": {
    "200": {
      "description": "Records upserted successfully",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "created": {
                "type": "integer",
                "description": "Number of new records created"
              },
              "updated": {
                "type": "integer",
                "description": "Number of existing records updated"
              },
              "records": {
                "type": "array",
                "description": "Created/updated records (only if returnRecords=true)",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "pattern": "^rec_[a-zA-Z0-9]+$"
                    },
                    "createdAt": {
                      "type": "string",
                      "format": "date-time"
                    },
                    "updatedAt": {
                      "type": "string",
                      "format": "date-time"
                    }
                  },
                  "additionalProperties": true
                }
              }
            },
            "required": ["created", "updated"]
          },
          "examples": {
            "withRecords": {
              "summary": "Response with records (returnRecords=true)",
              "value": {
                "created": 1,
                "updated": 1,
                "records": [
                  {
                    "id": "rec_001",
                    "email": "john@example.com",
                    "name": "John Doe",
                    "status": "active",
                    "createdAt": "2025-11-24T10:00:00Z",
                    "updatedAt": "2025-11-24T10:00:00Z"
                  },
                  {
                    "id": "rec_002",
                    "email": "jane@example.com",
                    "name": "Jane Smith",
                    "status": "active",
                    "createdAt": "2025-11-23T09:00:00Z",
                    "updatedAt": "2025-11-24T10:00:00Z"
                  }
                ]
              }
            },
            "withoutRecords": {
              "summary": "Response without records (returnRecords=false)",
              "value": {
                "created": 1,
                "updated": 1
              }
            }
          }
        }
      }
    },
    "400": {
      "$ref": "../../../../../../components/responses/BatchValidationError.json"
    },
    "403": {
      "$ref": "../../../../../../components/responses/PermissionDenied.json"
    },
    "404": {
      "$ref": "../../../../../../components/responses/NotFound.json"
    },
    "413": {
      "description": "Payload too large - Exceeds 1000 record limit",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "error": {
                "type": "string",
                "enum": ["PayloadTooLarge"]
              },
              "message": {
                "type": "string"
              }
            }
          },
          "example": {
            "error": "PayloadTooLarge",
            "message": "Batch size exceeds maximum of 1000 records"
          }
        }
      }
    },
    "500": {
      "$ref": "../../../../../../components/responses/InternalError.json"
    }
  },
  "x-specs": [
    {
      "id": "API-RECORDS-UPSERT-001",
      "given": "Table 'users' with existing record (email='john@example.com', name='John')",
      "when": "Upsert with fieldsToMergeOn=['email'] - 1 existing match, 1 new record",
      "then": "Returns 200 with created=1, updated=1, and records array",
      "validation": {
        "setup": {
          "executeQuery": [
            "CREATE TABLE users (id SERIAL PRIMARY KEY, email VARCHAR(255) UNIQUE NOT NULL, name VARCHAR(255), status VARCHAR(50))",
            "INSERT INTO users (email, name, status) VALUES ('john@example.com', 'John', 'active')"
          ],
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/tables/1/records/upsert",
            "headers": {
              "Authorization": "Bearer test_token",
              "Content-Type": "application/json"
            },
            "pathParams": { "tableId": 1 },
            "body": {
              "records": [
                {
                  "email": "john@example.com",
                  "name": "John Updated",
                  "status": "active"
                },
                {
                  "email": "jane@example.com",
                  "name": "Jane Smith",
                  "status": "active"
                }
              ],
              "fieldsToMergeOn": ["email"],
              "returnRecords": true
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 200 with created and updated counts",
            "expectedStatus": 200,
            "expectedSchema": {
              "type": "object",
              "properties": {
                "created": { "type": "integer" },
                "updated": { "type": "integer" },
                "records": {
                  "type": "array",
                  "minItems": 2,
                  "maxItems": 2
                }
              },
              "required": ["created", "updated"]
            },
            "validateResponseData": {
              "created": 1,
              "updated": 1,
              "records.length": 2
            }
          },
          {
            "description": "Database contains both records with correct data",
            "executeQuery": "SELECT COUNT(*) as count FROM users",
            "expected": { "count": 2 }
          }
        ]
      }
    },
    {
      "id": "API-RECORDS-UPSERT-002",
      "given": "Table 'users' with 0 records",
      "when": "Upsert with fieldsToMergeOn=['email'] - both records are new",
      "then": "Returns 200 with created=2, updated=0, and records array",
      "validation": {
        "setup": {
          "executeQuery": [
            "CREATE TABLE users (id SERIAL PRIMARY KEY, email VARCHAR(255) UNIQUE NOT NULL, name VARCHAR(255))"
          ],
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/tables/1/records/upsert",
            "headers": {
              "Authorization": "Bearer test_token",
              "Content-Type": "application/json"
            },
            "pathParams": { "tableId": 1 },
            "body": {
              "records": [
                {
                  "email": "john@example.com",
                  "name": "John Doe"
                },
                {
                  "email": "jane@example.com",
                  "name": "Jane Smith"
                }
              ],
              "fieldsToMergeOn": ["email"],
              "returnRecords": true
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 200 with all records created",
            "expectedStatus": 200,
            "validateResponseData": {
              "created": 2,
              "updated": 0,
              "records.length": 2
            }
          },
          {
            "description": "Database contains both new records",
            "executeQuery": "SELECT COUNT(*) as count FROM users",
            "expected": { "count": 2 }
          }
        ]
      }
    },
    {
      "id": "API-RECORDS-UPSERT-003",
      "given": "Table 'users' with email NOT NULL constraint",
      "when": "Upsert with 1 valid record and 1 missing email (validation error)",
      "then": "Returns 400 BatchValidationError, no records created/updated (rollback)",
      "validation": {
        "setup": {
          "executeQuery": [
            "CREATE TABLE users (id SERIAL PRIMARY KEY, email VARCHAR(255) UNIQUE NOT NULL, name VARCHAR(255))"
          ],
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/tables/1/records/upsert",
            "headers": {
              "Authorization": "Bearer test_token",
              "Content-Type": "application/json"
            },
            "pathParams": { "tableId": 1 },
            "body": {
              "records": [
                {
                  "email": "valid@example.com",
                  "name": "Valid User"
                },
                {
                  "name": "Invalid User"
                }
              ],
              "fieldsToMergeOn": ["email"]
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 400 validation error",
            "expectedStatus": 400,
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" },
                "details": { "type": "array" }
              },
              "required": ["error"]
            }
          },
          {
            "description": "No records created due to transaction rollback",
            "executeQuery": "SELECT COUNT(*) as count FROM users",
            "expected": { "count": 0 }
          }
        ]
      }
    }
  ]
}

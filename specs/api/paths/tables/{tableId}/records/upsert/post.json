    {
      "id": "API-RECORDS-UPSERT-003",
      "given": "Table 'users' with email NOT NULL constraint",
      "when": "Upsert with 1 valid record and 1 missing email (validation error)",
      "then": "Returns 400 BatchValidationError, no records created/updated (rollback)",
      "validation": {
        "setup": {
          "executeQuery": [
            "CREATE TABLE users (id SERIAL PRIMARY KEY, email VARCHAR(255) UNIQUE NOT NULL, name VARCHAR(255))"
          ],
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/tables/1/records/upsert",
            "headers": {
              "Authorization": "Bearer test_token",
              "Content-Type": "application/json"
            },
            "pathParams": { "tableId": 1 },
            "body": {
              "records": [
                {
                  "email": "valid@example.com",
                  "name": "Valid User"
                },
                {
                  "name": "Invalid User"
                }
              ],
              "fieldsToMergeOn": ["email"]
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 400 validation error",
            "expectedStatus": 400,
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" },
                "details": { "type": "array" }
              },
              "required": ["error"]
            }
          },
          {
            "description": "No records created due to transaction rollback",
            "executeQuery": "SELECT COUNT(*) as count FROM users",
            "expected": { "count": 0 }
          }
        ]
      }
    },

{
  "summary": "Batch delete records",
  "description": "Delete multiple records in a single transaction. All record IDs are validated before deletion. If any ID is invalid or not found, the entire operation is rolled back. Maximum 1000 records per request.",
  "operationId": "batchDeleteRecords",
  "tags": ["Records"],
  "parameters": [
    {
      "name": "tableId",
      "in": "path",
      "required": true,
      "description": "Table identifier (tbl_XXXXX)",
      "schema": {
        "type": "string",
        "pattern": "^tbl_[a-zA-Z0-9]+$"
      }
    }
  ],
  "requestBody": {
    "required": true,
    "content": {
      "application/json": {
        "schema": {
          "type": "object",
          "properties": {
            "ids": {
              "type": "array",
              "description": "Array of record IDs to delete (max 1000)",
              "minItems": 1,
              "maxItems": 1000,
              "items": {
                "type": "string",
                "pattern": "^rec_[a-zA-Z0-9]+$"
              }
            }
          },
          "required": ["ids"]
        },
        "example": {
          "ids": ["rec_001", "rec_002", "rec_003"]
        }
      }
    }
  },
  "responses": {
    "200": {
      "description": "Records deleted successfully",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "deleted": {
                "type": "integer",
                "description": "Number of records successfully deleted"
              }
            },
            "required": ["deleted"]
          },
          "example": {
            "deleted": 3
          }
        }
      }
    },
    "400": {
      "description": "Validation error - Invalid record ID format",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "error": {
                "type": "string",
                "enum": ["ValidationError"]
              },
              "message": {
                "type": "string"
              },
              "details": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "index": {
                      "type": "integer"
                    },
                    "field": {
                      "type": "string"
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "example": {
            "error": "ValidationError",
            "message": "Invalid record ID format",
            "details": [
              {
                "index": 1,
                "field": "ids[1]",
                "message": "Must match pattern ^rec_[a-zA-Z0-9]+$"
              }
            ]
          }
        }
      }
    },
    "403": {
      "$ref": "../../../../../../components/responses/PermissionDenied.json"
    },
    "404": {
      "$ref": "../../../../../../components/responses/NotFound.json"
    },
    "413": {
      "description": "Payload too large - Exceeds 1000 record limit",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "error": {
                "type": "string",
                "enum": ["PayloadTooLarge"]
              },
              "message": {
                "type": "string"
              }
            }
          },
          "example": {
            "error": "PayloadTooLarge",
            "message": "Batch size exceeds maximum of 1000 records"
          }
        }
      }
    },
    "500": {
      "$ref": "../../../../../../components/responses/InternalError.json"
    }
  },
  "x-specs": [
    {
      "id": "API-RECORDS-BATCH-009",
      "given": "Table 'users' with 3 records (ID=1, ID=2, ID=3)",
      "when": "Batch delete IDs [1, 2]",
      "then": "Returns 200 with deleted=2, records removed from database",
      "validation": {
        "setup": {
          "executeQuery": [
            "CREATE TABLE users (id SERIAL PRIMARY KEY, email VARCHAR(255) NOT NULL, name VARCHAR(255))",
            "INSERT INTO users (id, email, name) VALUES (1, 'user1@example.com', 'User One'), (2, 'user2@example.com', 'User Two'), (3, 'user3@example.com', 'User Three')"
          ],
          "apiRequest": {
            "method": "DELETE",
            "endpoint": "/api/tables/1/records/batch",
            "headers": {
              "Authorization": "Bearer test_token",
              "Content-Type": "application/json"
            },
            "pathParams": { "tableId": 1 },
            "body": {
              "ids": [1, 2]
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 200 with deleted count",
            "expectedStatus": 200,
            "expectedSchema": {
              "type": "object",
              "properties": {
                "deleted": { "type": "integer" }
              },
              "required": ["deleted"]
            },
            "validateResponseData": {
              "deleted": 2
            }
          },
          {
            "description": "Deleted records no longer exist in database",
            "executeQuery": "SELECT COUNT(*) as count FROM users WHERE id IN (1, 2)",
            "expected": { "count": 0 }
          },
          {
            "description": "Remaining record still exists",
            "executeQuery": "SELECT COUNT(*) as count FROM users WHERE id=3",
            "expected": { "count": 1 }
          }
        ]
      }
    },
    {
      "id": "API-RECORDS-BATCH-010",
      "given": "Table 'users' with record ID=1 only",
      "when": "Batch delete includes ID=1 (exists) and ID=9999 (not found)",
      "then": "Returns 404 NotFound, no records deleted (rollback)",
      "validation": {
        "setup": {
          "executeQuery": [
            "CREATE TABLE users (id SERIAL PRIMARY KEY, email VARCHAR(255) NOT NULL, name VARCHAR(255))",
            "INSERT INTO users (id, email, name) VALUES (1, 'john@example.com', 'John')"
          ],
          "apiRequest": {
            "method": "DELETE",
            "endpoint": "/api/tables/1/records/batch",
            "headers": {
              "Authorization": "Bearer test_token",
              "Content-Type": "application/json"
            },
            "pathParams": { "tableId": 1 },
            "body": {
              "ids": [1, 9999]
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 404 for nonexistent record",
            "expectedStatus": 404,
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" }
              },
              "required": ["error"]
            }
          },
          {
            "description": "No records deleted due to transaction rollback",
            "executeQuery": "SELECT COUNT(*) as count FROM users WHERE id=1",
            "expected": { "count": 1 }
          }
        ]
      }
    },
    {
      "id": "API-RECORDS-BATCH-011",
      "given": "Table 'users' exists",
      "when": "Batch delete request exceeds 1000 ID limit",
      "then": "Returns 413 PayloadTooLarge",
      "validation": {
        "setup": {
          "executeQuery": [
            "CREATE TABLE users (id SERIAL PRIMARY KEY, email VARCHAR(255) NOT NULL)"
          ],
          "apiRequest": {
            "method": "DELETE",
            "endpoint": "/api/tables/1/records/batch",
            "headers": {
              "Authorization": "Bearer test_token",
              "Content-Type": "application/json"
            },
            "pathParams": { "tableId": 1 },
            "body": {
              "ids": []
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 413 for payload exceeding limit",
            "expectedStatus": 413,
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" }
              }
            },
            "validateResponseData": {
              "error": "PayloadTooLarge"
            }
          }
        ]
      }
    },

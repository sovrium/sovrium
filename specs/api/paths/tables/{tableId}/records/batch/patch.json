{
  "summary": "Batch update records",
  "description": "Update multiple records in a single transaction. All records are validated before update. If any validation fails, the entire operation is rolled back. Maximum 1000 records per request. Records are matched by ID.",
  "operationId": "batchUpdateRecords",
  "tags": ["Records"],
  "parameters": [
    {
      "name": "tableId",
      "in": "path",
      "required": true,
      "description": "Table identifier (tbl_XXXXX)",
      "schema": {
        "type": "string",
        "pattern": "^tbl_[a-zA-Z0-9]+$"
      }
    }
  ],
  "requestBody": {
    "required": true,
    "content": {
      "application/json": {
        "schema": {
          "type": "object",
          "properties": {
            "records": {
              "type": "array",
              "description": "Array of records to update (max 1000). Each record must include 'id' field.",
              "minItems": 1,
              "maxItems": 1000,
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "pattern": "^rec_[a-zA-Z0-9]+$",
                    "description": "Record ID to update"
                  }
                },
                "required": ["id"],
                "additionalProperties": true
              }
            },
            "returnRecords": {
              "type": "boolean",
              "description": "If true, return updated records in response. If false, only return count metadata.",
              "default": true
            }
          },
          "required": ["records"]
        },
        "example": {
          "records": [
            {
              "id": "rec_001",
              "status": "inactive"
            },
            {
              "id": "rec_002",
              "email": "newemail@example.com"
            }
          ],
          "returnRecords": true
        }
      }
    }
  },
  "responses": {
    "200": {
      "description": "Records updated successfully",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "updated": {
                "type": "integer",
                "description": "Number of records successfully updated"
              },
              "records": {
                "type": "array",
                "description": "Updated records (only if returnRecords=true)",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "pattern": "^rec_[a-zA-Z0-9]+$"
                    },
                    "updatedAt": {
                      "type": "string",
                      "format": "date-time"
                    }
                  },
                  "additionalProperties": true
                }
              }
            },
            "required": ["updated"]
          },
          "examples": {
            "withRecords": {
              "summary": "Response with records (returnRecords=true)",
              "value": {
                "updated": 2,
                "records": [
                  {
                    "id": "rec_001",
                    "name": "John Doe",
                    "status": "inactive",
                    "updatedAt": "2025-11-24T10:00:00Z"
                  },
                  {
                    "id": "rec_002",
                    "email": "newemail@example.com",
                    "updatedAt": "2025-11-24T10:00:00Z"
                  }
                ]
              }
            },
            "withoutRecords": {
              "summary": "Response without records (returnRecords=false)",
              "value": {
                "updated": 2
              }
            }
          }
        }
      }
    },
    "400": {
      "$ref": "../../../../../../components/responses/BatchValidationError.json"
    },
    "403": {
      "$ref": "../../../../../../components/responses/PermissionDenied.json"
    },
    "404": {
      "$ref": "../../../../../../components/responses/NotFound.json"
    },
    "413": {
      "description": "Payload too large - Exceeds 1000 record limit",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "error": {
                "type": "string",
                "enum": ["PayloadTooLarge"]
              },
              "message": {
                "type": "string"
              }
            }
          },
          "example": {
            "error": "PayloadTooLarge",
            "message": "Batch size exceeds maximum of 1000 records"
          }
        }
      }
    },
    "500": {
      "$ref": "../../../../../../components/responses/InternalError.json"
    }
  },
  "x-specs": [
    {
      "id": "API-RECORDS-BATCH-005",
      "given": "table 'tbl_001' with records rec_001 and rec_002",
      "when": "PATCH /api/tables/tbl_001/records/batch with 2 valid updates",
      "then": "returns 200 with updated=2 and updated records array"
    },
    {
      "id": "API-RECORDS-BATCH-006",
      "given": "table 'tbl_001' with records rec_001 and rec_002",
      "when": "PATCH /api/tables/tbl_001/records/batch with returnRecords=false",
      "then": "returns 200 with updated=2 and no records array"
    },
    {
      "id": "API-RECORDS-BATCH-007",
      "given": "table 'tbl_001' with email validation",
      "when": "PATCH /api/tables/tbl_001/records/batch with 1 valid and 1 invalid email",
      "then": "returns 400 BatchValidationError with details array, no records updated (transaction rolled back)"
    },
    {
      "id": "API-RECORDS-BATCH-008",
      "given": "table 'tbl_001' with record rec_001",
      "when": "PATCH /api/tables/tbl_001/records/batch with rec_001 and rec_999 (nonexistent)",
      "then": "returns 404 NotFound for rec_999, no records updated (transaction rolled back)"
    }
  ]
}

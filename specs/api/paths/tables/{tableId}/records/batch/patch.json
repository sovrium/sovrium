    {
      "id": "API-RECORDS-BATCH-007",
      "given": "Table 'users' with email UNIQUE constraint and records ID=1, ID=2",
      "when": "Batch update with duplicate email (constraint violation)",
      "then": "Returns 400 BatchValidationError, no records updated (rollback)",
      "validation": {
        "setup": {
          "executeQuery": [
            "CREATE TABLE users (id SERIAL PRIMARY KEY, email VARCHAR(255) UNIQUE NOT NULL, name VARCHAR(255))",
            "INSERT INTO users (id, email, name) VALUES (1, 'john@example.com', 'John'), (2, 'jane@example.com', 'Jane')"
          ],
          "apiRequest": {
            "method": "PATCH",
            "endpoint": "/api/tables/1/records/batch",
            "headers": {
              "Authorization": "Bearer test_token",
              "Content-Type": "application/json"
            },
            "pathParams": { "tableId": 1 },
            "body": {
              "records": [
                {
                  "id": 1,
                  "name": "Valid Update"
                },
                {
                  "id": 2,
                  "email": "john@example.com"
                }
              ]
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 400 validation error",
            "expectedStatus": 400,
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" },
                "details": { "type": "array" }
              },
              "required": ["error"]
            }
          },
          {
            "description": "No records updated due to transaction rollback",
            "executeQuery": "SELECT name FROM users WHERE id=1",
            "expected": { "name": "John" }
          }
        ]
      }
    },

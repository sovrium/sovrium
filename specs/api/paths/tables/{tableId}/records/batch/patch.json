{
  "summary": "Batch update records",
  "description": "Update multiple records in a single transaction. All records are validated before update. If any validation fails, the entire operation is rolled back. Maximum 1000 records per request. Records are matched by ID.",
  "operationId": "batchUpdateRecords",
  "tags": ["Records"],
  "parameters": [
    {
      "name": "tableId",
      "in": "path",
      "required": true,
      "description": "Table identifier (tbl_XXXXX)",
      "schema": {
        "type": "string",
        "pattern": "^tbl_[a-zA-Z0-9]+$"
      }
    }
  ],
  "requestBody": {
    "required": true,
    "content": {
      "application/json": {
        "schema": {
          "type": "object",
          "properties": {
            "records": {
              "type": "array",
              "description": "Array of records to update (max 1000). Each record must include 'id' field.",
              "minItems": 1,
              "maxItems": 1000,
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "pattern": "^rec_[a-zA-Z0-9]+$",
                    "description": "Record ID to update"
                  }
                },
                "required": ["id"],
                "additionalProperties": true
              }
            },
            "returnRecords": {
              "type": "boolean",
              "description": "If true, return updated records in response. If false, only return count metadata.",
              "default": true
            }
          },
          "required": ["records"]
        },
        "example": {
          "records": [
            {
              "id": "rec_001",
              "status": "inactive"
            },
            {
              "id": "rec_002",
              "email": "newemail@example.com"
            }
          ],
          "returnRecords": true
        }
      }
    }
  },
  "responses": {
    "200": {
      "description": "Records updated successfully",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "updated": {
                "type": "integer",
                "description": "Number of records successfully updated"
              },
              "records": {
                "type": "array",
                "description": "Updated records (only if returnRecords=true)",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "pattern": "^rec_[a-zA-Z0-9]+$"
                    },
                    "updatedAt": {
                      "type": "string",
                      "format": "date-time"
                    }
                  },
                  "additionalProperties": true
                }
              }
            },
            "required": ["updated"]
          },
          "examples": {
            "withRecords": {
              "summary": "Response with records (returnRecords=true)",
              "value": {
                "updated": 2,
                "records": [
                  {
                    "id": "rec_001",
                    "name": "John Doe",
                    "status": "inactive",
                    "updatedAt": "2025-11-24T10:00:00Z"
                  },
                  {
                    "id": "rec_002",
                    "email": "newemail@example.com",
                    "updatedAt": "2025-11-24T10:00:00Z"
                  }
                ]
              }
            },
            "withoutRecords": {
              "summary": "Response without records (returnRecords=false)",
              "value": {
                "updated": 2
              }
            }
          }
        }
      }
    },
    "400": {
      "$ref": "../../../../../../components/responses/BatchValidationError.json"
    },
    "403": {
      "$ref": "../../../../../../components/responses/PermissionDenied.json"
    },
    "404": {
      "$ref": "../../../../../../components/responses/NotFound.json"
    },
    "413": {
      "description": "Payload too large - Exceeds 1000 record limit",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "error": {
                "type": "string",
                "enum": ["PayloadTooLarge"]
              },
              "message": {
                "type": "string"
              }
            }
          },
          "example": {
            "error": "PayloadTooLarge",
            "message": "Batch size exceeds maximum of 1000 records"
          }
        }
      }
    },
    "500": {
      "$ref": "../../../../../../components/responses/InternalError.json"
    }
  },
  "x-specs": [
    {
      "id": "API-RECORDS-BATCH-005",
      "given": "Table 'users' with records ID=1 and ID=2",
      "when": "Batch update both records with returnRecords=true",
      "then": "Returns 200 with updated=2 and updated records array",
      "validation": {
        "setup": {
          "executeQuery": [
            "CREATE TABLE users (id SERIAL PRIMARY KEY, email VARCHAR(255) UNIQUE NOT NULL, name VARCHAR(255), status VARCHAR(50), updated_at TIMESTAMP DEFAULT NOW())",
            "INSERT INTO users (id, email, name, status) VALUES (1, 'john@example.com', 'John', 'active'), (2, 'jane@example.com', 'Jane', 'active')"
          ],
          "apiRequest": {
            "method": "PATCH",
            "endpoint": "/api/tables/1/records/batch",
            "headers": {
              "Authorization": "Bearer test_token",
              "Content-Type": "application/json"
            },
            "pathParams": { "tableId": 1 },
            "body": {
              "records": [
                {
                  "id": 1,
                  "status": "inactive"
                },
                {
                  "id": 2,
                  "email": "jane.smith@example.com"
                }
              ],
              "returnRecords": true
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 200 with update count and records",
            "expectedStatus": 200,
            "expectedSchema": {
              "type": "object",
              "properties": {
                "updated": { "type": "integer" },
                "records": {
                  "type": "array",
                  "minItems": 2,
                  "maxItems": 2
                }
              },
              "required": ["updated"]
            },
            "validateResponseData": {
              "updated": 2,
              "records.length": 2
            }
          },
          {
            "description": "Database reflects updated values",
            "executeQuery": "SELECT status FROM users WHERE id=1",
            "expected": { "status": "inactive" }
          }
        ]
      }
    },
    {
      "id": "API-RECORDS-BATCH-006",
      "given": "Table 'users' with records ID=1 and ID=2",
      "when": "Batch update with returnRecords=false",
      "then": "Returns 200 with updated=2 and no records array",
      "validation": {
        "setup": {
          "executeQuery": [
            "CREATE TABLE users (id SERIAL PRIMARY KEY, email VARCHAR(255) NOT NULL, name VARCHAR(255))",
            "INSERT INTO users (id, email, name) VALUES (1, 'user1@example.com', 'User One'), (2, 'user2@example.com', 'User Two')"
          ],
          "apiRequest": {
            "method": "PATCH",
            "endpoint": "/api/tables/1/records/batch",
            "headers": {
              "Authorization": "Bearer test_token",
              "Content-Type": "application/json"
            },
            "pathParams": { "tableId": 1 },
            "body": {
              "records": [
                {
                  "id": 1,
                  "name": "Updated One"
                },
                {
                  "id": 2,
                  "name": "Updated Two"
                }
              ],
              "returnRecords": false
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 200 with count only, no records array",
            "expectedStatus": 200,
            "expectedSchema": {
              "type": "object",
              "properties": {
                "updated": { "type": "integer" }
              },
              "required": ["updated"]
            },
            "validateResponseData": {
              "updated": 2
            }
          }
        ]
      }
    },
    {
      "id": "API-RECORDS-BATCH-007",
      "given": "Table 'users' with email UNIQUE constraint and records ID=1, ID=2",
      "when": "Batch update with duplicate email (constraint violation)",
      "then": "Returns 400 BatchValidationError, no records updated (rollback)",
      "validation": {
        "setup": {
          "executeQuery": [
            "CREATE TABLE users (id SERIAL PRIMARY KEY, email VARCHAR(255) UNIQUE NOT NULL, name VARCHAR(255))",
            "INSERT INTO users (id, email, name) VALUES (1, 'john@example.com', 'John'), (2, 'jane@example.com', 'Jane')"
          ],
          "apiRequest": {
            "method": "PATCH",
            "endpoint": "/api/tables/1/records/batch",
            "headers": {
              "Authorization": "Bearer test_token",
              "Content-Type": "application/json"
            },
            "pathParams": { "tableId": 1 },
            "body": {
              "records": [
                {
                  "id": 1,
                  "name": "Valid Update"
                },
                {
                  "id": 2,
                  "email": "john@example.com"
                }
              ]
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 400 validation error",
            "expectedStatus": 400,
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" },
                "details": { "type": "array" }
              },
              "required": ["error"]
            }
          },
          {
            "description": "No records updated due to transaction rollback",
            "executeQuery": "SELECT name FROM users WHERE id=1",
            "expected": { "name": "John" }
          }
        ]
      }
    },
    {
      "id": "API-RECORDS-BATCH-008",
      "given": "Table 'users' with record ID=1 only",
      "when": "Batch update includes ID=1 (exists) and ID=9999 (not found)",
      "then": "Returns 404 NotFound, no records updated (rollback)",
      "validation": {
        "setup": {
          "executeQuery": [
            "CREATE TABLE users (id SERIAL PRIMARY KEY, email VARCHAR(255) NOT NULL, name VARCHAR(255))",
            "INSERT INTO users (id, email, name) VALUES (1, 'john@example.com', 'John')"
          ],
          "apiRequest": {
            "method": "PATCH",
            "endpoint": "/api/tables/1/records/batch",
            "headers": {
              "Authorization": "Bearer test_token",
              "Content-Type": "application/json"
            },
            "pathParams": { "tableId": 1 },
            "body": {
              "records": [
                {
                  "id": 1,
                  "name": "Updated John"
                },
                {
                  "id": 9999,
                  "name": "Nonexistent User"
                }
              ]
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 404 for nonexistent record",
            "expectedStatus": 404,
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" }
              },
              "required": ["error"]
            }
          },
          {
            "description": "No records updated due to transaction rollback",
            "executeQuery": "SELECT name FROM users WHERE id=1",
            "expected": { "name": "John" }
          }
        ]
      }
    }
  ]
}

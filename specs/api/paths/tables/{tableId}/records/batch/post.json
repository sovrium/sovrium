{
  "summary": "Batch create records",
  "description": "Create multiple records in a single transaction. All records are validated before creation. If any validation fails, the entire operation is rolled back. Maximum 1000 records per request.",
  "operationId": "batchCreateRecords",
  "tags": ["Records"],
  "parameters": [
    {
      "name": "tableId",
      "in": "path",
      "required": true,
      "description": "Table identifier (tbl_XXXXX)",
      "schema": {
        "type": "string",
        "pattern": "^tbl_[a-zA-Z0-9]+$"
      }
    }
  ],
  "requestBody": {
    "required": true,
    "content": {
      "application/json": {
        "schema": {
          "type": "object",
          "properties": {
            "records": {
              "type": "array",
              "description": "Array of records to create (max 1000)",
              "minItems": 1,
              "maxItems": 1000,
              "items": {
                "type": "object",
                "description": "Record data (dynamic schema based on table fields)",
                "additionalProperties": true
              }
            },
            "returnRecords": {
              "type": "boolean",
              "description": "If true, return created records in response. If false, only return count metadata.",
              "default": true
            }
          },
          "required": ["records"]
        },
        "example": {
          "records": [
            {
              "name": "John Doe",
              "email": "john@example.com",
              "status": "active"
            },
            {
              "name": "Jane Smith",
              "email": "jane@example.com",
              "status": "active"
            }
          ],
          "returnRecords": true
        }
      }
    }
  },
  "responses": {
    "201": {
      "description": "Records created successfully",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "created": {
                "type": "integer",
                "description": "Number of records successfully created"
              },
              "records": {
                "type": "array",
                "description": "Created records (only if returnRecords=true)",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "pattern": "^rec_[a-zA-Z0-9]+$"
                    },
                    "createdAt": {
                      "type": "string",
                      "format": "date-time"
                    },
                    "updatedAt": {
                      "type": "string",
                      "format": "date-time"
                    }
                  },
                  "additionalProperties": true
                }
              }
            },
            "required": ["created"]
          },
          "examples": {
            "withRecords": {
              "summary": "Response with records (returnRecords=true)",
              "value": {
                "created": 2,
                "records": [
                  {
                    "id": "rec_001",
                    "name": "John Doe",
                    "email": "john@example.com",
                    "status": "active",
                    "createdAt": "2025-11-24T10:00:00Z",
                    "updatedAt": "2025-11-24T10:00:00Z"
                  },
                  {
                    "id": "rec_002",
                    "name": "Jane Smith",
                    "email": "jane@example.com",
                    "status": "active",
                    "createdAt": "2025-11-24T10:00:00Z",
                    "updatedAt": "2025-11-24T10:00:00Z"
                  }
                ]
              }
            },
            "withoutRecords": {
              "summary": "Response without records (returnRecords=false)",
              "value": {
                "created": 2
              }
            }
          }
        }
      }
    },
    "400": {
      "$ref": "../../../../../../components/responses/BatchValidationError.json"
    },
    "403": {
      "$ref": "../../../../../../components/responses/PermissionDenied.json"
    },
    "404": {
      "$ref": "../../../../../../components/responses/NotFound.json"
    },
    "413": {
      "description": "Payload too large - Exceeds 1000 record limit",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "error": {
                "type": "string",
                "enum": ["PayloadTooLarge"]
              },
              "message": {
                "type": "string"
              }
            }
          },
          "example": {
            "error": "PayloadTooLarge",
            "message": "Batch size exceeds maximum of 1000 records"
          }
        }
      }
    },
    "500": {
      "$ref": "../../../../../../components/responses/InternalError.json"
    }
  },
  "x-specs": [
    {
      "id": "API-RECORDS-BATCH-001",
      "given": "Table 'users' exists with 0 records",
      "when": "Batch create 3 valid records with returnRecords=true",
      "then": "Returns 201 with created=3 and records array",
      "validation": {
        "setup": {
          "executeQuery": [
            "CREATE TABLE users (id SERIAL PRIMARY KEY, email VARCHAR(255) UNIQUE NOT NULL, name VARCHAR(255), created_at TIMESTAMP DEFAULT NOW())"
          ],
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/tables/1/records/batch",
            "headers": {
              "Authorization": "Bearer test_token",
              "Content-Type": "application/json"
            },
            "pathParams": { "tableId": 1 },
            "body": {
              "records": [
                {
                  "email": "john@example.com",
                  "name": "John Doe"
                },
                {
                  "email": "jane@example.com",
                  "name": "Jane Smith"
                },
                {
                  "email": "bob@example.com",
                  "name": "Bob Johnson"
                }
              ],
              "returnRecords": true
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 201 with created count and records",
            "expectedStatus": 201,
            "expectedSchema": {
              "type": "object",
              "properties": {
                "created": { "type": "integer" },
                "records": {
                  "type": "array",
                  "minItems": 3,
                  "maxItems": 3
                }
              },
              "required": ["created"]
            },
            "validateResponseData": {
              "created": 3,
              "records.length": 3
            }
          },
          {
            "description": "Database contains all 3 records",
            "executeQuery": "SELECT COUNT(*) as count FROM users",
            "expected": { "count": 3 }
          }
        ]
      }
    },
    {
      "id": "API-RECORDS-BATCH-002",
      "given": "Table 'users' exists",
      "when": "Batch create 2 records with returnRecords=false",
      "then": "Returns 201 with created=2 and no records array",
      "validation": {
        "setup": {
          "executeQuery": [
            "CREATE TABLE users (id SERIAL PRIMARY KEY, email VARCHAR(255) NOT NULL, name VARCHAR(255))"
          ],
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/tables/1/records/batch",
            "headers": {
              "Authorization": "Bearer test_token",
              "Content-Type": "application/json"
            },
            "pathParams": { "tableId": 1 },
            "body": {
              "records": [
                {
                  "email": "user1@example.com",
                  "name": "User One"
                },
                {
                  "email": "user2@example.com",
                  "name": "User Two"
                }
              ],
              "returnRecords": false
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 201 with count only, no records array",
            "expectedStatus": 201,
            "expectedSchema": {
              "type": "object",
              "properties": {
                "created": { "type": "integer" }
              },
              "required": ["created"]
            },
            "validateResponseData": {
              "created": 2
            }
          }
        ]
      }
    },
    {
      "id": "API-RECORDS-BATCH-003",
      "given": "Table 'users' with email NOT NULL constraint",
      "when": "Batch create with 1 valid record and 1 missing email",
      "then": "Returns 400 BatchValidationError, no records created (rollback)",
      "validation": {
        "setup": {
          "executeQuery": [
            "CREATE TABLE users (id SERIAL PRIMARY KEY, email VARCHAR(255) NOT NULL, name VARCHAR(255))"
          ],
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/tables/1/records/batch",
            "headers": {
              "Authorization": "Bearer test_token",
              "Content-Type": "application/json"
            },
            "pathParams": { "tableId": 1 },
            "body": {
              "records": [
                {
                  "email": "valid@example.com",
                  "name": "Valid User"
                },
                {
                  "name": "Invalid User"
                }
              ]
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 400 validation error with details",
            "expectedStatus": 400,
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" },
                "details": { "type": "array" }
              },
              "required": ["error"]
            }
          },
          {
            "description": "No records created due to transaction rollback",
            "executeQuery": "SELECT COUNT(*) as count FROM users",
            "expected": { "count": 0 }
          }
        ]
      }
    },
    {
      "id": "API-RECORDS-BATCH-004",
      "given": "Table 'users' exists",
      "when": "Batch create request exceeds 1000 record limit",
      "then": "Returns 413 PayloadTooLarge",
      "validation": {
        "setup": {
          "executeQuery": [
            "CREATE TABLE users (id SERIAL PRIMARY KEY, email VARCHAR(255) NOT NULL)"
          ],
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/tables/1/records/batch",
            "headers": {
              "Authorization": "Bearer test_token",
              "Content-Type": "application/json"
            },
            "pathParams": { "tableId": 1 },
            "body": {
              "records": []
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 413 for payload exceeding limit",
            "expectedStatus": 413,
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" }
              }
            },
            "validateResponseData": {
              "error": "PayloadTooLarge"
            }
          }
        ]
      }
    }
  ]
}

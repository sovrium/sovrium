      "given": "A member user with field-level write restrictions (salary protected)",
      "when": "Member attempts to batch create with protected field in any record",
      "then": "Returns 403 Forbidden error",
      "validation": {
        "setup": {
          "executeQuery": [
            "CREATE TABLE employees (id SERIAL PRIMARY KEY, name VARCHAR(255), email VARCHAR(255), salary DECIMAL(10,2), organization_id VARCHAR(255))"
          ],
          "authUser": {
            "id": 2,
            "organizationId": "org_123",
            "role": "member"
          },
          "tableConfig": {
            "id": 1,
            "name": "employees",
            "organizationId": "org_123",
            "permissions": {
              "member": {
                "table": { "read": true, "create": true, "update": true, "delete": false },
                "fields": {
                  "salary": { "read": false, "write": false }
                }
              }
            }
          },
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/tables/1/records/batch",
            "headers": {
              "Authorization": "Bearer member_token",
              "Content-Type": "application/json"
            },
            "pathParams": { "tableId": 1 },
            "body": {
              "records": [
                { "name": "Alice Cooper", "email": "alice@example.com" },
                { "name": "Bob Smith", "email": "bob@example.com", "salary": 85000 }
              ]
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 403 when any record contains protected field",
            "expectedStatus": 403,
            "validateResponseData": {
              "error": "Forbidden",
              "message": "You do not have permission to write to field: salary"
            }
          },
          {
            "description": "No records created (transaction rollback)",
            "executeQuery": "SELECT COUNT(*) as count FROM employees",
            "expected": { "count": 0 }
          }
        ]
      }
    },

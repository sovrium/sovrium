{
  "summary": "Create new record",
  "description": "Creates a new record in the specified table with provided field values.",
  "operationId": "createRecord",
  "tags": ["records"],
  "parameters": [
    {
      "name": "tableId",
      "in": "path",
      "required": true,
      "schema": {
        "type": "integer",
        "minimum": 1
      }
    }
  ],
  "requestBody": {
    "required": true,
    "content": {
      "application/json": {
        "schema": {
          "type": "object",
          "additionalProperties": true
        },
        "examples": {
          "userRecord": {
            "value": {
              "email": "user@example.com",
              "first_name": "John",
              "last_name": "Doe"
            }
          }
        }
      }
    }
  },
  "responses": {
    "201": {
      "description": "Record created successfully",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "additionalProperties": true
          },
          "examples": {
            "created": {
              "value": {
                "id": 1,
                "email": "user@example.com",
                "first_name": "John",
                "last_name": "Doe"
              }
            }
          }
        }
      }
    },
    "400": {
      "$ref": "../../../../components/responses/ValidationError.json"
    },
    "404": {
      "$ref": "../../../../components/responses/TableNotFound.json"
    },
    "409": {
      "$ref": "../../../../components/responses/ConflictError.json"
    }
  },
  "x-specs": [
    {
      "id": "API-TABLES-RECORDS-CREATE-001",
      "given": "A running server with valid table",
      "when": "User creates record with valid data",
      "then": "Response should be 201 Created with record data",
      "validation": {
        "setup": {
          "executeQuery": [
            "CREATE TABLE users (id SERIAL PRIMARY KEY, email VARCHAR(255) UNIQUE NOT NULL, first_name VARCHAR(255), last_name VARCHAR(255))"
          ],
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/tables/1/records",
            "headers": {
              "Authorization": "Bearer test_token",
              "Content-Type": "application/json"
            },
            "pathParams": { "tableId": 1 },
            "body": {
              "email": "john.doe@example.com",
              "first_name": "John",
              "last_name": "Doe"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 201 with created record including auto-generated ID",
            "expectedStatus": 201,
            "expectedSchema": {
              "type": "object",
              "properties": {
                "id": { "type": "integer" },
                "email": { "type": "string" },
                "first_name": { "type": "string" },
                "last_name": { "type": "string" }
              },
              "required": ["id", "email"]
            },
            "validateResponseData": {
              "email": "john.doe@example.com",
              "first_name": "John",
              "last_name": "Doe"
            }
          },
          {
            "description": "Record exists in database after creation",
            "executeQuery": "SELECT * FROM users WHERE email='john.doe@example.com'",
            "expected": {
              "email": "john.doe@example.com",
              "first_name": "John",
              "last_name": "Doe"
            }
          }
        ]
      }
    },
    {
      "id": "API-TABLES-RECORDS-CREATE-002",
      "given": "A running server",
      "when": "User attempts to create record in non-existent table",
      "then": "Response should be 404 Not Found",
      "validation": {
        "setup": {
          "executeQuery": [],
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/tables/9999/records",
            "headers": {
              "Authorization": "Bearer test_token",
              "Content-Type": "application/json"
            },
            "pathParams": { "tableId": 9999 },
            "body": {
              "email": "test@example.com"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 404 when table does not exist",
            "expectedStatus": 404,
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" }
              },
              "required": ["error"]
            },
            "validateResponseData": {
              "error": "Table not found"
            }
          }
        ]
      }
    },
    {
      "id": "API-TABLES-RECORDS-CREATE-003",
      "given": "A table with required email field",
      "when": "User creates record without required field",
      "then": "Response should be 400 Bad Request with validation error",
      "validation": {
        "setup": {
          "executeQuery": [
            "CREATE TABLE users (id SERIAL PRIMARY KEY, email VARCHAR(255) UNIQUE NOT NULL, first_name VARCHAR(255))"
          ],
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/tables/1/records",
            "headers": {
              "Authorization": "Bearer test_token",
              "Content-Type": "application/json"
            },
            "pathParams": { "tableId": 1 },
            "body": {
              "first_name": "John"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 400 for missing required field",
            "expectedStatus": 400,
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" },
                "details": { "type": "object" }
              },
              "required": ["error"]
            },
            "validateResponseData": {
              "error": "Validation error"
            }
          }
        ]
      }
    },
    {
      "id": "API-TABLES-RECORDS-CREATE-004",
      "given": "A table with unique email constraint and existing record",
      "when": "User attempts to create record with duplicate email",
      "then": "Response should be 409 Conflict",
      "validation": {
        "setup": {
          "executeQuery": [
            "CREATE TABLE users (id SERIAL PRIMARY KEY, email VARCHAR(255) UNIQUE NOT NULL, first_name VARCHAR(255))",
            "INSERT INTO users (email, first_name) VALUES ('existing@example.com', 'Jane')"
          ],
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/tables/1/records",
            "headers": {
              "Authorization": "Bearer test_token",
              "Content-Type": "application/json"
            },
            "pathParams": { "tableId": 1 },
            "body": {
              "email": "existing@example.com",
              "first_name": "John"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 409 for unique constraint violation",
            "expectedStatus": 409,
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" },
                "code": { "type": "string" }
              },
              "required": ["error"]
            },
            "validateResponseData": {
              "error": "Unique constraint violation"
            }
          },
          {
            "description": "Database still contains only original record",
            "executeQuery": "SELECT COUNT(*) as count FROM users WHERE email='existing@example.com'",
            "expected": { "count": 1 }
          }
        ]
      }
    },
    {
      "id": "API-TABLES-RECORDS-CREATE-005",
      "given": "A valid table",
      "when": "Unauthenticated user attempts to create record",
      "then": "Response should be 401 Unauthorized",
      "validation": {
        "setup": {
          "executeQuery": [
            "CREATE TABLE users (id SERIAL PRIMARY KEY, email VARCHAR(255) NOT NULL)"
          ],
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/tables/1/records",
            "headers": {
              "Content-Type": "application/json"
            },
            "pathParams": { "tableId": 1 },
            "body": {
              "email": "test@example.com"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 401 when no auth token provided",
            "expectedStatus": 401,
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" },
                "message": { "type": "string" }
              }
            }
          }
        ]
      }
    }
  ]
}

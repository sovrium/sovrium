    {
      "id": "API-TABLES-RECORDS-GET-PERMISSIONS-CROSS-ORG-PREVENTION-001",
      "given": "A record with organization_id='org_456' and admin from org_123",
      "when": "Admin attempts to fetch record from different organization",
      "then": "Returns 404 Not Found (not 403 - prevents org enumeration)",
      "validation": {
        "setup": {
          "executeQuery": [
            "CREATE TABLE employees (id SERIAL PRIMARY KEY, name VARCHAR(255), email VARCHAR(255), organization_id VARCHAR(255))",
            "INSERT INTO employees (id, name, email, organization_id) VALUES (1, 'Eve Wilson', 'eve@example.com', 'org_456')"
          ],
          "authUser": {
            "id": 1,
            "organizationId": "org_123",
            "role": "admin"
          },
          "tableConfig": {
            "id": 1,
            "name": "employees",
            "organizationId": "org_123",
            "permissions": {
              "admin": {
                "table": { "read": true, "create": true, "update": true, "delete": true }
              }
            }
          },
          "apiRequest": {
            "method": "GET",
            "endpoint": "/api/tables/1/records/1",
            "headers": { "Authorization": "Bearer admin_token" },
            "pathParams": { "tableId": 1, "recordId": 1 }
          }
        },
        "assertions": [
          {
            "description": "Returns 404 to prevent organization enumeration",
            "expectedStatus": 404,
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" }
              },
              "required": ["error"]
            },
            "validateResponseData": {
              "error": "Record not found"
            }
          }
        ]
      }
    },
    {
      "id": "API-TABLES-RECORDS-GET-PERMISSIONS-COMBINED-SCENARIO-001",
      "given": "A member with field restrictions tries to fetch record from different org",
      "when": "Member attempts GET with both permission and org violations",
      "then": "Returns 404 Not Found (org isolation checked first)",
      "validation": {
        "setup": {
          "executeQuery": [
            "CREATE TABLE employees (id SERIAL PRIMARY KEY, name VARCHAR(255), email VARCHAR(255), salary DECIMAL(10,2), organization_id VARCHAR(255))",
            "INSERT INTO employees (id, name, email, salary, organization_id) VALUES (1, 'Frank Moore', 'frank@example.com', 75000, 'org_456')"
          ],
          "authUser": {
            "id": 2,
            "organizationId": "org_123",
            "role": "member"
          },
          "tableConfig": {
            "id": 1,
            "name": "employees",
            "organizationId": "org_123",
            "permissions": {
              "member": {
                "table": { "read": true, "create": true, "update": true, "delete": false },
                "fields": {
                  "salary": { "read": false, "write": false }
                }
              }
            }
          },
          "apiRequest": {
            "method": "GET",
            "endpoint": "/api/tables/1/records/1",
            "headers": { "Authorization": "Bearer member_token" },
            "pathParams": { "tableId": 1, "recordId": 1 }
          }
        },
        "assertions": [
          {
            "description": "Returns 404 (org isolation checked before field permissions)",
            "expectedStatus": 404,
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" }
              },
              "required": ["error"]
            },
            "validateResponseData": {
              "error": "Record not found"
            }
          }
        ]
      }
    }
  ]
}

      "validation": {
        "setup": {
          "executeQuery": [
            "CREATE TABLE employees (id SERIAL PRIMARY KEY, name VARCHAR(255), email VARCHAR(255), salary DECIMAL(10,2), organization_id VARCHAR(255))",
            "INSERT INTO employees (id, name, email, salary, organization_id) VALUES (1, 'Bob Smith', 'bob@example.com', 95000, 'org_456')"
          ],
          "authUser": {
            "id": 3,
            "organizationId": "org_456",
            "role": "viewer"
          },
          "tableConfig": {
            "id": 1,
            "name": "employees",
            "organizationId": "org_456",
            "permissions": {
              "viewer": {
                "table": { "read": true, "create": false, "update": false, "delete": false },
                "fields": {
                  "salary": { "read": false, "write": false },
                  "email": { "read": false, "write": false }
                }
              }
            }
          },
          "apiRequest": {
            "method": "GET",
            "endpoint": "/api/tables/1/records/1",
            "headers": { "Authorization": "Bearer viewer_token" },
            "pathParams": { "tableId": 1, "recordId": 1 }
          }
        },
        "assertions": [
          {
            "description": "Returns record with salary and email fields filtered out",
            "expectedStatus": 200,
            "expectedSchema": {
              "type": "object",
              "properties": {
                "id": { "type": "integer" },
                "name": { "type": "string" },
                "organization_id": { "type": "string" }
              },
              "required": ["id", "name", "organization_id"]
            },
            "validateResponseData": {
              "id": 1,
              "name": "Bob Smith",
              "organization_id": "org_456"
            },
            "validateResponseDataExcluded": ["salary", "email"]
          }
        ]
      }
    },
    {

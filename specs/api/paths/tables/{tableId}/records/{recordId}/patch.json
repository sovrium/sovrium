      "validation": {
        "setup": {
          "executeQuery": [
            "CREATE TABLE employees (id SERIAL PRIMARY KEY, name VARCHAR(255), email VARCHAR(255), salary DECIMAL(10,2))",
            "INSERT INTO employees (id, name, email, salary) VALUES (1, 'Jane Smith', 'jane@example.com', 75000)"
          ],
          "authUser": {
            "id": 2,

    {
      "id": "API-TABLES-RECORDS-UPDATE-PERMISSIONS-PARTIAL-UPDATE-001",
      "given": "Member user updates only permitted fields",
      "when": "Update request includes both permitted and omitted fields",
      "then": "Returns 200 with permitted fields updated, protected fields unchanged",
      "validation": {
        "setup": {
          "executeQuery": [
            "CREATE TABLE employees (id SERIAL PRIMARY KEY, name VARCHAR(255), email VARCHAR(255), salary DECIMAL(10,2))",
            "INSERT INTO employees (id, name, email, salary) VALUES (1, 'Alice Cooper', 'alice@example.com', 75000)"
          ],
          "authUser": {
            "id": 2,
            "organizationId": "org_123",
            "role": "member"
          },
          "tableConfig": {
            "id": 1,
            "name": "employees",
            "organizationId": "org_123",
            "permissions": {
              "member": {
                "table": { "read": true, "create": true, "update": true, "delete": false },
                "fields": {
                  "name": { "read": true, "write": true },
                  "email": { "read": true, "write": true },
                  "salary": { "read": false, "write": false }
                }
              }
            }
          },
          "apiRequest": {
            "method": "PATCH",
            "endpoint": "/api/tables/1/records/1",
            "headers": {
              "Authorization": "Bearer member_token",
              "Content-Type": "application/json"
            },
            "pathParams": { "tableId": 1, "recordId": 1 },
            "body": {
              "name": "Alice Updated",
              "email": "alice.updated@example.com"
            }
          }
        },
        "assertions": [
          {
            "description": "Permitted fields updated successfully",
            "expectedStatus": 200,
            "expectedSchema": {
              "type": "object",
              "properties": {
                "id": { "type": "integer" },
                "name": { "type": "string" },
                "email": { "type": "string" }
              },
              "required": ["id", "name", "email"]
            },
            "validateResponseData": {
              "id": 1,
              "name": "Alice Updated",
              "email": "alice.updated@example.com"
            }
          },
          {
            "description": "Salary remains unchanged in database",
            "executeQuery": "SELECT salary FROM employees WHERE id=1",
            "expected": { "salary": 75000 }
          },
          {
            "description": "Salary field not in response (member cannot read it)",
            "executeAssertion": "expect(response).not.toHaveProperty('salary')"
          }
        ]
      }
    },

            "pathParams": { "tableId": 1, "recordId": 1 }
          }
        },
        "assertions": [
          {
            "description": "Returns 404 when record belongs to different organization",
            "expectedStatus": 404,
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" }

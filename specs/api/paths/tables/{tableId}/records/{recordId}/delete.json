      "then": "Returns 403 Forbidden error",
      "validation": {
        "setup": {
          "executeQuery": [
            "CREATE TABLE employees (id SERIAL PRIMARY KEY, name VARCHAR(255), organization_id VARCHAR(255))",
            "INSERT INTO employees (id, name, organization_id) VALUES (1, 'Alice Cooper', 'org_123')"
          ],
          "authUser": {
            "id": 2,
            "organizationId": "org_123",
            "role": "member"
          },
          "tableConfig": {
            "id": 1,
            "name": "employees",
            "organizationId": "org_123",
            "permissions": {
              "member": {
                "table": { "read": true, "create": true, "update": true, "delete": false }
              }
            }
          },
          "apiRequest": {
            "method": "DELETE",
            "endpoint": "/api/tables/1/records/1",
            "headers": { "Authorization": "Bearer member_token" },
            "pathParams": { "tableId": 1, "recordId": 1 }
          }
        },
        "assertions": [
          {
            "description": "Returns 403 when member lacks delete permission",
            "expectedStatus": 403,
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" },
                "message": { "type": "string" }
              }
            },
            "validateResponseData": {
              "error": "Forbidden",
              "message": "You do not have permission to delete records in this table"
            }
          },
          {
            "description": "Record remains in database",
            "executeQuery": "SELECT COUNT(*) as count FROM employees WHERE id=1",
            "expected": { "count": 1 }
          }
        ]
      }
    },

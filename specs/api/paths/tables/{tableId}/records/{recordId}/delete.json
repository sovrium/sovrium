{
  "summary": "Delete record",
  "description": "Deletes a record from the table by its ID.",
  "operationId": "deleteRecord",
  "tags": ["records"],
  "parameters": [
    {
      "name": "tableId",
      "in": "path",
      "required": true,
      "schema": {
        "type": "integer",
        "minimum": 1
      }
    },
    {
      "name": "recordId",
      "in": "path",
      "required": true,
      "schema": {
        "type": "integer",
        "minimum": 1
      }
    }
  ],
  "responses": {
    "204": {
      "description": "Record deleted successfully"
    },
    "404": {
      "$ref": "../../../../../components/responses/RecordNotFound.json"
    }
  },
  "x-specs": [
    {
      "id": "API-TABLES-RECORDS-DELETE-001",
      "given": "Table 'users' with record ID=1",
      "when": "User deletes record by ID",
      "then": "Returns 204 No Content and record is removed from database",
      "validation": {
        "setup": {
          "executeQuery": [
            "CREATE TABLE users (id SERIAL PRIMARY KEY, email VARCHAR(255) NOT NULL)",
            "INSERT INTO users (id, email) VALUES (1, 'test@example.com')"
          ],
          "apiRequest": {
            "method": "DELETE",
            "endpoint": "/api/tables/1/records/1",
            "headers": {
              "Authorization": "Bearer test_token"
            },
            "pathParams": { "tableId": 1, "recordId": 1 }
          }
        },
        "assertions": [
          {
            "description": "Returns 204 No Content",
            "expectedStatus": 204
          },
          {
            "description": "Record no longer exists in database",
            "executeQuery": "SELECT COUNT(*) as count FROM users WHERE id=1",
            "expected": { "count": 0 }
          }
        ]
      }
    },
    {
      "id": "API-TABLES-RECORDS-DELETE-002",
      "given": "Table 'users' exists but record ID=9999 does not",
      "when": "User attempts to delete non-existent record",
      "then": "Returns 404 Not Found",
      "validation": {
        "setup": {
          "executeQuery": [
            "CREATE TABLE users (id SERIAL PRIMARY KEY, email VARCHAR(255) NOT NULL)"
          ],
          "apiRequest": {
            "method": "DELETE",
            "endpoint": "/api/tables/1/records/9999",
            "headers": {
              "Authorization": "Bearer test_token"
            },
            "pathParams": { "tableId": 1, "recordId": 9999 }
          }
        },
        "assertions": [
          {
            "description": "Returns 404 when record does not exist",
            "expectedStatus": 404,
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" }
              },
              "required": ["error"]
            },
            "validateResponseData": {
              "error": "Record not found"
            }
          }
        ]
      }
    },
    {
      "id": "API-TABLES-RECORDS-DELETE-PERMISSIONS-UNAUTHORIZED-001",
      "given": "An unauthenticated user",
      "when": "User attempts to delete a record without auth token",
      "then": "Returns 401 Unauthorized error",
      "validation": {
        "setup": {
          "executeQuery": [
            "CREATE TABLE employees (id SERIAL PRIMARY KEY, name VARCHAR(255), organization_id VARCHAR(255))",
            "INSERT INTO employees (id, name, organization_id) VALUES (1, 'Alice Cooper', 'org_123')"
          ],
          "apiRequest": {
            "method": "DELETE",
            "endpoint": "/api/tables/1/records/1",
            "pathParams": { "tableId": 1, "recordId": 1 }
          }
        },
        "assertions": [
          {
            "description": "Returns 401 when no auth token provided",
            "expectedStatus": 401,
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" },
                "message": { "type": "string" }
              }
            }
          },
          {
            "description": "Record remains in database (not deleted)",
            "executeQuery": "SELECT COUNT(*) as count FROM employees WHERE id=1",
            "expected": { "count": 1 }
          }
        ]
      }
    },
    {
      "id": "API-TABLES-RECORDS-DELETE-PERMISSIONS-FORBIDDEN-MEMBER-001",
      "given": "A member user without delete permission",

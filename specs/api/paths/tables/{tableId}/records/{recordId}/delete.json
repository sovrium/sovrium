          "authUser": {
            "id": 1,
            "organizationId": "org_123",
            "role": "admin"
          },
          "tableConfig": {
            "id": 1,
            "name": "employees",
            "organizationId": "org_123"
          },
          "apiRequest": {
            "method": "DELETE",

{
  "summary": "Refresh session token",
  "description": "Refreshes an existing session by issuing a new token with extended expiration. The old token is invalidated after successful refresh.",
  "operationId": "refreshSession",
  "tags": ["authentication"],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "responses": {
    "200": {
      "description": "Success - Session refreshed successfully",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "required": ["token", "expiresAt"],
            "properties": {
              "token": {
                "type": "string",
                "description": "New session authentication token"
              },
              "expiresAt": {
                "type": "string",
                "format": "date-time",
                "description": "New session expiration timestamp"
              }
            }
          },
          "examples": {
            "refreshed": {
              "summary": "Successfully refreshed session",
              "value": {
                "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
                "expiresAt": "2025-01-29T10:30:00Z"
              }
            }
          }
        }
      }
    },
    "401": {
      "description": "Unauthorized - Invalid or expired session token",
      "content": {
        "application/json": {
          "schema": {
            "$ref": "../../../components/schemas/Error.json"
          }
        }
      }
    }
  },
  "x-specs": [
    {
      "id": "API-AUTH-REFRESH-SESSION-SUCCESS-001",
      "given": "An authenticated user with valid session token",
      "when": "User requests to refresh their session",
      "then": "Returns 200 OK with new token and extended expiration",
      "validation": {
        "setup": {
          "executeQuery": [
            "INSERT INTO users (id, email, password_hash, name, email_verified, created_at, updated_at) VALUES (1, 'test@example.com', '$2a$10$YourHashedPasswordHere', 'Test User', true, NOW(), NOW())",
            "INSERT INTO sessions (id, user_id, token, expires_at, created_at, updated_at) VALUES (1, 1, 'valid_token', NOW() + INTERVAL '1 day', NOW(), NOW())"
          ],
          "authUser": {
            "id": 1,
            "sessionId": 1
          },
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/auth/refresh-session",
            "headers": {
              "Authorization": "Bearer valid_token",
              "Content-Type": "application/json"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 200 OK",
            "expectedStatus": 200
          },
          {
            "description": "Response contains new token and expiration",
            "expectedSchema": {
              "type": "object",
              "properties": {
                "token": { "type": "string" },
                "expiresAt": { "type": "string" }
              },
              "required": ["token", "expiresAt"]
            }
          },
          {
            "description": "New token is different from old token",
            "validateResponseData": {
              "token": {
                "notEquals": "valid_token"
              }
            }
          },
          {
            "description": "Old token is invalidated in database",
            "validateDatabaseState": {
              "query": "SELECT * FROM sessions WHERE token = 'valid_token' AND deleted_at IS NOT NULL",
              "expectedRows": 1
            }
          }
        ]
      }
    },
    {
      "id": "API-AUTH-REFRESH-SESSION-PERMISSIONS-UNAUTHORIZED-NO-TOKEN-001",
      "given": "A running server",
      "when": "User attempts refresh without authentication token",
      "then": "Returns 401 Unauthorized",
      "validation": {
        "setup": {
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/auth/refresh-session",
            "headers": {
              "Content-Type": "application/json"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 401 Unauthorized",
            "expectedStatus": 401
          },
          {
            "description": "Response contains error about missing authentication",
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" },
                "code": { "type": "string" }
              }
            }
          }
        ]
      }
    },
    {
      "id": "API-AUTH-REFRESH-SESSION-PERMISSIONS-UNAUTHORIZED-INVALID-TOKEN-001",
      "given": "A running server",
      "when": "User attempts refresh with invalid token",
      "then": "Returns 401 Unauthorized",
      "validation": {
        "setup": {
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/auth/refresh-session",
            "headers": {
              "Authorization": "Bearer invalid_token_12345",
              "Content-Type": "application/json"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 401 Unauthorized",
            "expectedStatus": 401
          },
          {
            "description": "Response contains error about invalid token",
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" },
                "code": { "type": "string" }
              }
            }
          }
        ]
      }
    },
    {
      "id": "API-AUTH-REFRESH-SESSION-PERMISSIONS-UNAUTHORIZED-EXPIRED-TOKEN-001",
      "given": "A user with expired session token",
      "when": "User attempts to refresh with expired token",
      "then": "Returns 401 Unauthorized (cannot refresh expired session)",
      "validation": {
        "setup": {
          "executeQuery": [
            "INSERT INTO users (id, email, password_hash, name, email_verified, created_at, updated_at) VALUES (1, 'test@example.com', '$2a$10$YourHashedPasswordHere', 'Test User', true, NOW(), NOW())",
            "INSERT INTO sessions (id, user_id, token, expires_at, created_at, updated_at) VALUES (1, 1, 'expired_token', NOW() - INTERVAL '1 day', NOW() - INTERVAL '7 days', NOW() - INTERVAL '7 days')"
          ],
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/auth/refresh-session",
            "headers": {
              "Authorization": "Bearer expired_token",
              "Content-Type": "application/json"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 401 Unauthorized",
            "expectedStatus": 401
          },
          {
            "description": "Response contains error about expired token",
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" },
                "code": { "type": "string" }
              }
            }
          }
        ]
      }
    },
    {
      "id": "API-AUTH-REFRESH-SESSION-EDGE-CASE-OLD-TOKEN-INVALIDATION-001",
      "given": "A user who has refreshed their session",
      "when": "User attempts to use the old token after refresh",
      "then": "Returns 401 Unauthorized (old token is invalidated)",
      "validation": {
        "setup": {
          "executeQuery": [
            "INSERT INTO users (id, email, password_hash, name, email_verified, created_at, updated_at) VALUES (1, 'test@example.com', '$2a$10$YourHashedPasswordHere', 'Test User', true, NOW(), NOW())",
            "INSERT INTO sessions (id, user_id, token, expires_at, deleted_at, created_at, updated_at) VALUES (1, 1, 'old_refreshed_token', NOW() + INTERVAL '7 days', NOW(), NOW() - INTERVAL '1 hour', NOW())"
          ],
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/auth/refresh-session",
            "headers": {
              "Authorization": "Bearer old_refreshed_token",
              "Content-Type": "application/json"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 401 Unauthorized",
            "expectedStatus": 401
          },
          {
            "description": "Response indicates token is no longer valid",
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" },
                "code": { "type": "string" }
              }
            }
          }
        ]
      }
    }
  ]
}

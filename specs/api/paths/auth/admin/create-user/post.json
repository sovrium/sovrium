{
  "summary": "Admin: Create user",
  "description": "Allows administrators to create new user accounts programmatically. Requires admin role. Can optionally set initial password and email verification status.",
  "operationId": "adminCreateUser",
  "tags": ["admin", "authentication"],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "requestBody": {
    "required": true,
    "content": {
      "application/json": {
        "schema": {
          "type": "object",
          "required": ["email", "name", "password"],
          "properties": {
            "email": {
              "type": "string",
              "format": "email",
              "description": "User email address",
              "example": "newuser@example.com"
            },
            "name": {
              "type": "string",
              "description": "User full name",
              "example": "John Doe"
            },
            "password": {
              "type": "string",
              "minLength": 8,
              "description": "User password (min 8 characters)",
              "example": "SecurePass123!"
            },
            "emailVerified": {
              "type": "boolean",
              "description": "Whether email is pre-verified (default: false)",
              "default": false,
              "example": true
            },
            "image": {
              "type": "string",
              "format": "uri",
              "description": "Optional profile image URL",
              "nullable": true,
              "example": "https://avatar.example.com/user.jpg"
            }
          }
        }
      }
    }
  },
  "responses": {
    "201": {
      "description": "Success - User created",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "required": ["user"],
            "properties": {
              "user": {
                "$ref": "../../../../components/schemas/User.json"
              }
            }
          },
          "examples": {
            "userCreated": {
              "summary": "User created successfully",
              "value": {
                "user": {
                  "id": "user_123abc",
                  "email": "newuser@example.com",
                  "name": "John Doe",
                  "image": null,
                  "emailVerified": false,
                  "createdAt": "2025-01-15T10:00:00Z",
                  "updatedAt": "2025-01-15T10:00:00Z"
                }
              }
            }
          }
        }
      }
    },
    "400": {
      "$ref": "../../../../components/responses/ValidationError.json"
    },
    "401": {
      "description": "Unauthorized - User not authenticated",
      "content": {
        "application/json": {
          "schema": {
            "$ref": "../../../../components/schemas/Error.json"
          }
        }
      }
    },
    "403": {
      "description": "Forbidden - User does not have admin role",
      "content": {
        "application/json": {
          "schema": {
            "$ref": "../../../../components/schemas/Error.json"
          }
        }
      }
    },
    "409": {
      "$ref": "../../../../components/responses/ConflictError.json"
    }
  },
  "x-specs": [
    {
      "id": "API-ADMIN-CREATE-USER-SUCCESS-001",
      "given": "An authenticated admin user",
      "when": "Admin creates a new user with valid data",
      "then": "Returns 201 Created with user data",
      "validation": {
        "setup": {
          "executeQuery": [
            "INSERT INTO users (id, email, password_hash, name, email_verified, role, created_at, updated_at) VALUES (1, 'admin@example.com', '$2a$10$YourHashedPasswordHere', 'Admin User', true, 'admin', NOW(), NOW())",
            "INSERT INTO sessions (id, user_id, token, expires_at, created_at) VALUES (1, 1, 'admin_token', NOW() + INTERVAL '7 days', NOW())"
          ],
          "authUser": {
            "id": 1,
            "sessionId": 1,
            "role": "admin"
          },
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/auth/admin/create-user",
            "headers": {
              "Authorization": "Bearer admin_token",
              "Content-Type": "application/json"
            },
            "body": {
              "email": "newuser@example.com",
              "name": "New User",
              "password": "SecurePass123!"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 201 Created",
            "expectedStatus": 201
          },
          {
            "description": "Response contains created user data",
            "expectedSchema": {
              "type": "object",
              "properties": {
                "user": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string" },
                    "email": { "type": "string" },
                    "name": { "type": "string" },
                    "emailVerified": { "type": "boolean" }
                  },
                  "required": ["id", "email", "name"]
                }
              },
              "required": ["user"]
            }
          },
          {
            "description": "User is created in database with hashed password",
            "validateDatabaseState": {
              "query": "SELECT email, name, email_verified FROM users WHERE email = 'newuser@example.com'",
              "expectedRows": 1,
              "rowValidation": {
                "email": {
                  "equals": "newuser@example.com"
                },
                "name": {
                  "equals": "New User"
                },
                "email_verified": {
                  "equals": false
                }
              }
            }
          },
          {
            "description": "Password is securely hashed (not plain text)",
            "validateDatabaseState": {
              "query": "SELECT password_hash FROM users WHERE email = 'newuser@example.com'",
              "expectedRows": 1,
              "rowValidation": {
                "password_hash": {
                  "notEquals": "SecurePass123!"
                }
              }
            }
          }
        ]
      }
    },

{
  "summary": "Admin: Unban user",
  "description": "Removes ban from a user, allowing them to sign in again. Requires admin role.",
  "operationId": "adminUnbanUser",
  "tags": ["admin", "authentication"],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "requestBody": {
    "required": true,
    "content": {
      "application/json": {
        "schema": {
          "type": "object",
          "required": ["userId"],
          "properties": {
            "userId": {
              "type": "string",
              "description": "The ID of the user to unban",
              "example": "user_123abc"
            }
          }
        }
      }
    }
  },
  "responses": {
    "200": {
      "description": "Success - User unbanned",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "required": ["status"],
            "properties": {
              "status": {
                "type": "boolean",
                "enum": [true],
                "description": "Indicates successful user unban"
              }
            }
          },
          "examples": {
            "userUnbanned": {
              "summary": "User unbanned successfully",
              "value": {
                "status": true
              }
            }
          }
        }
      }
    },
    "400": {
      "$ref": "../../../../components/responses/ValidationError.json"
    },
    "401": {
      "description": "Unauthorized - User not authenticated",
      "content": {
        "application/json": {
          "schema": {
            "$ref": "../../../../components/schemas/Error.json"
          }
        }
      }
    },
    "403": {
      "description": "Forbidden - User does not have admin role",
      "content": {
        "application/json": {
          "schema": {
            "$ref": "../../../../components/schemas/Error.json"
          }
        }
      }
    },
    "404": {
      "description": "Not Found - User not found",
      "content": {
        "application/json": {
          "schema": {
            "$ref": "../../../../components/schemas/Error.json"
          }
        }
      }
    }
  },
  "x-specs": [
    {
      "id": "API-ADMIN-UNBAN-USER-SUCCESS-001",
      "given": "An authenticated admin user and a banned user",
      "when": "Admin unbans the user",
      "then": "Returns 200 OK and removes ban, allowing user to sign in",
      "validation": {
        "setup": {
          "executeQuery": [
            "INSERT INTO users (id, email, password_hash, name, email_verified, role, banned, created_at, updated_at) VALUES (1, 'admin@example.com', '$2a$10$YourHashedPasswordHere', 'Admin User', true, 'admin', false, NOW(), NOW())",
            "INSERT INTO users (id, email, password_hash, name, email_verified, banned, ban_reason, created_at, updated_at) VALUES (2, 'target@example.com', '$2a$10$YourHashedPasswordHere', 'Target User', true, true, 'Previously banned', NOW(), NOW())",
            "INSERT INTO sessions (id, user_id, token, expires_at, created_at) VALUES (1, 1, 'admin_token', NOW() + INTERVAL '7 days', NOW())"
          ],
          "authUser": {
            "id": 1,
            "sessionId": 1,
            "role": "admin"
          },
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/auth/admin/unban-user",
            "headers": {
              "Authorization": "Bearer admin_token",
              "Content-Type": "application/json"
            },
            "body": {
              "userId": "2"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 200 OK",
            "expectedStatus": 200
          },
          {
            "description": "Response indicates success",
            "expectedSchema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "boolean",
                  "enum": [true]
                }
              },
              "required": ["status"]
            }
          },
          {
            "description": "User ban is removed in database",
            "validateDatabaseState": {
              "query": "SELECT banned FROM users WHERE id = 2",
              "expectedRows": 1,
              "rowValidation": {
                "banned": {
                  "equals": false
                }
              }
            }
          },
          {
            "description": "Ban reason is cleared",
            "validateDatabaseState": {
              "query": "SELECT ban_reason FROM users WHERE id = 2",
              "expectedRows": 1,
              "rowValidation": {
                "ban_reason": {
                  "isNull": true
                }
              }
            }
          }
        ]
      }
    },
    {
      "id": "API-ADMIN-UNBAN-USER-VALIDATION-REQUIRED-USER-ID-001",
      "given": "An authenticated admin user",
      "when": "Admin submits request without userId",
      "then": "Returns 400 Bad Request with validation error",
      "validation": {
        "setup": {
          "executeQuery": [
            "INSERT INTO users (id, email, password_hash, name, email_verified, role, created_at, updated_at) VALUES (1, 'admin@example.com', '$2a$10$YourHashedPasswordHere', 'Admin User', true, 'admin', NOW(), NOW())",
            "INSERT INTO sessions (id, user_id, token, expires_at, created_at) VALUES (1, 1, 'admin_token', NOW() + INTERVAL '7 days', NOW())"
          ],
          "authUser": {
            "id": 1,
            "sessionId": 1,
            "role": "admin"
          },
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/auth/admin/unban-user",
            "headers": {
              "Authorization": "Bearer admin_token",
              "Content-Type": "application/json"
            },
            "body": {}
          }
        },
        "assertions": [
          {
            "description": "Returns 400 Bad Request",
            "expectedStatus": 400
          },
          {
            "description": "Response contains validation error for userId field",
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" },
                "code": { "type": "string" }
              }
            }
          }
        ]
      }
    },
    {
      "id": "API-ADMIN-UNBAN-USER-PERMISSIONS-UNAUTHORIZED-NO-TOKEN-001",
      "given": "A running server",
      "when": "Unauthenticated user attempts to unban user",
      "then": "Returns 401 Unauthorized",
      "validation": {
        "setup": {
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/auth/admin/unban-user",
            "headers": {
              "Content-Type": "application/json"
            },
            "body": {
              "userId": "2"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 401 Unauthorized",
            "expectedStatus": 401
          },
          {
            "description": "Response contains error about missing authentication",
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" },
                "code": { "type": "string" }
              }
            }
          }
        ]
      }
    },
    {
      "id": "API-ADMIN-UNBAN-USER-PERMISSIONS-FORBIDDEN-NON-ADMIN-001",
      "given": "An authenticated regular user (non-admin)",
      "when": "Regular user attempts to unban another user",
      "then": "Returns 403 Forbidden",
      "validation": {
        "setup": {
          "executeQuery": [
            "INSERT INTO users (id, email, password_hash, name, email_verified, role, created_at, updated_at) VALUES (1, 'user@example.com', '$2a$10$YourHashedPasswordHere', 'Regular User', true, 'member', NOW(), NOW())",
            "INSERT INTO users (id, email, password_hash, name, email_verified, banned, created_at, updated_at) VALUES (2, 'target@example.com', '$2a$10$YourHashedPasswordHere', 'Target User', true, true, NOW(), NOW())",
            "INSERT INTO sessions (id, user_id, token, expires_at, created_at) VALUES (1, 1, 'user_token', NOW() + INTERVAL '7 days', NOW())"
          ],
          "authUser": {
            "id": 1,
            "sessionId": 1,
            "role": "member"
          },
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/auth/admin/unban-user",
            "headers": {
              "Authorization": "Bearer user_token",
              "Content-Type": "application/json"
            },
            "body": {
              "userId": "2"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 403 Forbidden",
            "expectedStatus": 403
          },
          {
            "description": "Response contains error about insufficient permissions",
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" },
                "code": { "type": "string" }
              }
            }
          }
        ]
      }
    },
    {
      "id": "API-ADMIN-UNBAN-USER-NOT-FOUND-001",
      "given": "An authenticated admin user",
      "when": "Admin attempts to unban non-existent user",
      "then": "Returns 404 Not Found",
      "validation": {
        "setup": {
          "executeQuery": [
            "INSERT INTO users (id, email, password_hash, name, email_verified, role, created_at, updated_at) VALUES (1, 'admin@example.com', '$2a$10$YourHashedPasswordHere', 'Admin User', true, 'admin', NOW(), NOW())",
            "INSERT INTO sessions (id, user_id, token, expires_at, created_at) VALUES (1, 1, 'admin_token', NOW() + INTERVAL '7 days', NOW())"
          ],
          "authUser": {
            "id": 1,
            "sessionId": 1,
            "role": "admin"
          },
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/auth/admin/unban-user",
            "headers": {
              "Authorization": "Bearer admin_token",
              "Content-Type": "application/json"
            },
            "body": {
              "userId": "999"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 404 Not Found",
            "expectedStatus": 404
          },
          {
            "description": "Response contains error about user not found",
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" },
                "code": { "type": "string" }
              }
            }
          }
        ]
      }
    },
    {
      "id": "API-ADMIN-UNBAN-USER-EDGE-CASE-ALREADY-UNBANNED-001",
      "given": "An authenticated admin user and an already active user",
      "when": "Admin unbans already unbanned user",
      "then": "Returns 200 OK (idempotent operation)",
      "validation": {
        "setup": {
          "executeQuery": [
            "INSERT INTO users (id, email, password_hash, name, email_verified, role, banned, created_at, updated_at) VALUES (1, 'admin@example.com', '$2a$10$YourHashedPasswordHere', 'Admin User', true, 'admin', false, NOW(), NOW())",
            "INSERT INTO users (id, email, password_hash, name, email_verified, banned, created_at, updated_at) VALUES (2, 'target@example.com', '$2a$10$YourHashedPasswordHere', 'Target User', true, false, NOW(), NOW())",
            "INSERT INTO sessions (id, user_id, token, expires_at, created_at) VALUES (1, 1, 'admin_token', NOW() + INTERVAL '7 days', NOW())"
          ],
          "authUser": {
            "id": 1,
            "sessionId": 1,
            "role": "admin"
          },
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/auth/admin/unban-user",
            "headers": {
              "Authorization": "Bearer admin_token",
              "Content-Type": "application/json"
            },
            "body": {
              "userId": "2"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 200 OK (idempotent)",
            "expectedStatus": 200
          },
          {
            "description": "User remains unbanned",
            "validateDatabaseState": {
              "query": "SELECT banned FROM users WHERE id = 2",
              "expectedRows": 1,
              "rowValidation": {
                "banned": {
                  "equals": false
                }
              }
            }
          }
        ]
      }
    }
  ]
}

{
  "summary": "Change email address",
  "description": "Changes the user's email address. If email verification is enabled, sends a verification email to the new address before updating.",
  "operationId": "changeEmail",
  "tags": ["authentication"],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "requestBody": {
    "required": true,
    "content": {
      "application/json": {
        "schema": {
          "type": "object",
          "required": ["newEmail"],
          "properties": {
            "newEmail": {
              "type": "string",
              "format": "email",
              "description": "The new email address to set (must be a valid email address)",
              "example": "newemail@example.com"
            },
            "callbackURL": {
              "type": "string",
              "format": "uri",
              "description": "The URL to redirect to after email verification",
              "nullable": true,
              "example": "https://app.example.com/verify-email"
            }
          }
        }
      }
    }
  },
  "responses": {
    "200": {
      "description": "Email change request processed successfully",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "required": ["status"],
            "properties": {
              "status": {
                "type": "boolean",
                "enum": [true],
                "description": "Indicates if the request was successful"
              },
              "message": {
                "type": "string",
                "enum": ["Email updated", "Verification email sent"],
                "description": "Status message of the email change process",
                "nullable": true
              }
            }
          },
          "examples": {
            "emailUpdated": {
              "summary": "Email updated immediately (no verification required)",
              "value": {
                "status": true,
                "message": "Email updated"
              }
            },
            "verificationSent": {
              "summary": "Verification email sent (verification required)",
              "value": {
                "status": true,
                "message": "Verification email sent"
              }
            }
          }
        }
      }
    },
    "400": {
      "$ref": "../../../components/responses/ValidationError.json"
    },
    "401": {
      "description": "Unauthorized - User not authenticated",
      "content": {
        "application/json": {
          "schema": {
            "$ref": "../../../components/schemas/Error.json"
          }
        }
      }
    },
    "409": {
      "$ref": "../../../components/responses/ConflictError.json"
    }
  },
  "x-specs": [
    {
      "id": "API-AUTH-CHANGE-EMAIL-SUCCESS-001",
      "given": "An authenticated user with valid new email",
      "when": "User requests to change email to unused address",
      "then": "Returns 200 OK and updates email (or sends verification)",
      "validation": {
        "setup": {
          "executeQuery": [
            "INSERT INTO users (id, email, password_hash, name, email_verified, created_at, updated_at) VALUES (1, 'old@example.com', '$2a$10$YourHashedPasswordHere', 'Test User', true, NOW(), NOW())",
            "INSERT INTO sessions (id, user_id, token, expires_at, created_at) VALUES (1, 1, 'valid_token', NOW() + INTERVAL '7 days', NOW())"
          ],
          "authUser": {
            "id": 1,
            "sessionId": 1
          },
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/auth/change-email",
            "headers": {
              "Authorization": "Bearer valid_token",
              "Content-Type": "application/json"
            },
            "body": {
              "newEmail": "new@example.com"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 200 OK",
            "expectedStatus": 200
          },
          {
            "description": "Response indicates success",
            "expectedSchema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "boolean",
                  "enum": [true]
                },
                "message": { "type": "string" }
              },
              "required": ["status"]
            }
          }
        ]
      }
    },

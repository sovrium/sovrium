    },
    {
      "id": "API-AUTH-SIGN-UP-EMAIL-SECURITY-XSS-PREVENTION-NAME-001",
      "given": "A running server",
      "when": "User submits name with XSS payload",
      "then": "Returns 200 OK with sanitized name (XSS payload neutralized)",
      "validation": {
        "setup": {
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/auth/sign-up/email",
            "headers": {
              "Content-Type": "application/json"
            },
            "body": {
              "name": "<script>alert('xss')</script>John",
              "email": "john@example.com",
              "password": "SecurePass123!"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 200 OK",
            "expectedStatus": 200
          },
          {
            "description": "Name is sanitized (no script tags in response)",
            "validateResponseData": {
              "user.name": {
                "notContains": "<script>"
              }
            }
          }
        ]
      }
    },

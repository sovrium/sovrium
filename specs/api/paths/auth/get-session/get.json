{
  "summary": "Get current session",
  "description": "Retrieves the current authenticated user's session and profile information. Requires valid bearer token in Authorization header.",
  "operationId": "getSession",
  "tags": ["authentication"],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "responses": {
    "200": {
      "description": "Success - Returns current session and user information",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "required": ["session", "user"],
            "properties": {
              "session": {
                "$ref": "../../../components/schemas/Session.json"
              },
              "user": {
                "$ref": "../../../components/schemas/User.json"
              }
            }
          },
          "examples": {
            "authenticatedSession": {
              "summary": "Active user session",
              "value": {
                "session": {
                  "id": "sess_abc123xyz",
                  "expiresAt": "2025-01-22T10:30:00Z",
                  "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
                  "createdAt": "2025-01-15T10:30:00Z",
                  "updatedAt": "2025-01-15T10:30:00Z",
                  "ipAddress": "192.168.1.1",
                  "userAgent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64)",
                  "userId": "user_123abc"
                },
                "user": {
                  "id": "user_123abc",
                  "email": "user@example.com",
                  "name": "John Doe",
                  "image": "https://avatar.example.com/john.jpg",
                  "emailVerified": true,
                  "createdAt": "2025-01-10T08:00:00Z",
                  "updatedAt": "2025-01-15T10:30:00Z"
                }
              }
            }
          }
        }
      }
    },
    "401": {
      "description": "Unauthorized - Invalid or expired session token",
      "content": {
        "application/json": {
          "schema": {
            "$ref": "../../../components/schemas/Error.json"
          },
          "examples": {
            "unauthorized": {
              "value": {
                "error": "Unauthorized",
                "code": "UNAUTHORIZED",
                "details": {
                  "message": "Invalid or expired session token"
                }
              }
            }
          }
        }
      }
    }
  },
  "x-specs": [
    {
      "id": "API-AUTH-GET-SESSION-SUCCESS-001",
      "given": "An authenticated user with active session",
      "when": "User requests current session information",
      "then": "Returns 200 OK with session and user data",
      "validation": {
        "setup": {
          "executeQuery": [
            "INSERT INTO users (id, email, password_hash, name, email_verified, created_at, updated_at) VALUES (1, 'test@example.com', '$2a$10$YourHashedPasswordHere', 'Test User', true, NOW(), NOW())",
            "INSERT INTO sessions (id, user_id, token, expires_at, ip_address, user_agent, created_at, updated_at) VALUES (1, 1, 'valid_session_token', NOW() + INTERVAL '7 days', '192.168.1.1', 'Mozilla/5.0', NOW(), NOW())"
          ],
          "authUser": {
            "id": 1,
            "sessionId": 1
          },
          "apiRequest": {
            "method": "GET",
            "endpoint": "/api/auth/get-session",
            "headers": {
              "Authorization": "Bearer valid_session_token"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 200 OK",
            "expectedStatus": 200
          },
          {
            "description": "Response contains session and user data",
            "expectedSchema": {
              "type": "object",
              "properties": {
                "session": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string" },
                    "token": { "type": "string" },
                    "expiresAt": { "type": "string" },
                    "ipAddress": { "type": "string" },
                    "userAgent": { "type": "string" },
                    "userId": { "type": "string" },
                    "createdAt": { "type": "string" },
                    "updatedAt": { "type": "string" }
                  },
                  "required": ["id", "token", "expiresAt", "userId", "createdAt", "updatedAt"]
                },
                "user": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string" },
                    "email": { "type": "string" },
                    "name": { "type": "string" },
                    "emailVerified": { "type": "boolean" },
                    "createdAt": { "type": "string" },
                    "updatedAt": { "type": "string" }
                  },
                  "required": ["id", "email", "name", "emailVerified", "createdAt", "updatedAt"]
                }
              },
              "required": ["session", "user"]
            }
          },
          {
            "description": "User password is not included in response (security)",
            "validateResponseData": {
              "user.password": {
                "notExists": true
              },
              "user.password_hash": {
                "notExists": true
              }
            }
          }
        ]
      }
    },
    {
      "id": "API-AUTH-GET-SESSION-PERMISSIONS-UNAUTHORIZED-NO-TOKEN-001",
      "given": "A running server",
      "when": "User requests session without authentication token",
      "then": "Returns 401 Unauthorized",
      "validation": {
        "setup": {
          "apiRequest": {
            "method": "GET",
            "endpoint": "/api/auth/get-session"
          }
        },
        "assertions": [
          {
            "description": "Returns 401 Unauthorized",
            "expectedStatus": 401
          },
          {
            "description": "Response contains error about missing authentication",
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" },
                "code": { "type": "string" }
              }
            }
          }
        ]
      }
    },
    {
      "id": "API-AUTH-GET-SESSION-PERMISSIONS-UNAUTHORIZED-INVALID-TOKEN-001",
      "given": "A running server",
      "when": "User requests session with invalid token",
      "then": "Returns 401 Unauthorized",
      "validation": {
        "setup": {
          "apiRequest": {
            "method": "GET",
            "endpoint": "/api/auth/get-session",
            "headers": {
              "Authorization": "Bearer invalid_token_12345"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 401 Unauthorized",
            "expectedStatus": 401
          },
          {
            "description": "Response contains error about invalid token",
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" },
                "code": { "type": "string" }
              }
            }
          }
        ]
      }
    },
    {
      "id": "API-AUTH-GET-SESSION-PERMISSIONS-UNAUTHORIZED-EXPIRED-TOKEN-001",
      "given": "A user with expired session token",
      "when": "User requests session with expired token",
      "then": "Returns 401 Unauthorized",
      "validation": {
        "setup": {
          "executeQuery": [
            "INSERT INTO users (id, email, password_hash, name, email_verified, created_at, updated_at) VALUES (1, 'test@example.com', '$2a$10$YourHashedPasswordHere', 'Test User', true, NOW(), NOW())",
            "INSERT INTO sessions (id, user_id, token, expires_at, created_at, updated_at) VALUES (1, 1, 'expired_token', NOW() - INTERVAL '1 day', NOW() - INTERVAL '7 days', NOW() - INTERVAL '7 days')"
          ],
          "apiRequest": {
            "method": "GET",
            "endpoint": "/api/auth/get-session",
            "headers": {
              "Authorization": "Bearer expired_token"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 401 Unauthorized",
            "expectedStatus": 401
          },
          {
            "description": "Response contains error about expired token",
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" },
                "code": { "type": "string" }
              }
            }
          }
        ]
      }
    },
    {
      "id": "API-AUTH-GET-SESSION-EDGE-CASE-SESSION-METADATA-001",
      "given": "An authenticated user with session metadata",
      "when": "User requests session information",
      "then": "Returns session with IP address and user agent metadata",
      "validation": {
        "setup": {
          "executeQuery": [
            "INSERT INTO users (id, email, password_hash, name, email_verified, created_at, updated_at) VALUES (1, 'test@example.com', '$2a$10$YourHashedPasswordHere', 'Test User', true, NOW(), NOW())",
            "INSERT INTO sessions (id, user_id, token, expires_at, ip_address, user_agent, created_at, updated_at) VALUES (1, 1, 'valid_token', NOW() + INTERVAL '7 days', '203.0.113.42', 'Mozilla/5.0 (Macintosh; Intel Mac OS X 10_15_7)', NOW(), NOW())"
          ],
          "authUser": {
            "id": 1,
            "sessionId": 1
          },
          "apiRequest": {
            "method": "GET",
            "endpoint": "/api/auth/get-session",
            "headers": {
              "Authorization": "Bearer valid_token"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 200 OK",
            "expectedStatus": 200
          },
          {
            "description": "Response includes session metadata (IP and user agent)",
            "validateResponseData": {
              "session.ipAddress": {
                "equals": "203.0.113.42"
              },
              "session.userAgent": {
                "contains": "Mozilla/5.0"
              }
            }
          }
        ]
      }
    }
  ]
}

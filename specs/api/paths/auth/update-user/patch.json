{
  "summary": "Update user profile",
  "description": "Updates the authenticated user's profile information such as name, image, and other metadata.",
  "operationId": "updateUser",
  "tags": ["authentication"],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "requestBody": {
    "required": true,
    "content": {
      "application/json": {
        "schema": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "Updated user name",
              "nullable": true,
              "example": "John Doe"
            },
            "image": {
              "type": "string",
              "format": "uri",
              "description": "Updated profile image URL",
              "nullable": true,
              "example": "https://avatar.example.com/user.jpg"
            }
          }
        }
      }
    }
  },
  "responses": {
    "200": {
      "description": "Success - User profile updated",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "required": ["user"],
            "properties": {
              "user": {
                "$ref": "../../../components/schemas/User.json"
              }
            }
          },
          "examples": {
            "userUpdated": {
              "summary": "Profile updated successfully",
              "value": {
                "user": {
                  "id": "user_123abc",
                  "email": "user@example.com",
                  "name": "John Doe Updated",
                  "image": "https://avatar.example.com/new.jpg",
                  "emailVerified": true,
                  "createdAt": "2025-01-10T08:00:00Z",
                  "updatedAt": "2025-01-15T12:00:00Z"
                }
              }
            }
          }
        }
      }
    },
    "400": {
      "$ref": "../../../components/responses/ValidationError.json"
    },
    "401": {
      "description": "Unauthorized - User not authenticated",
      "content": {
        "application/json": {
          "schema": {
            "$ref": "../../../components/schemas/Error.json"
          }
        }
      }
    }
  },
  "x-specs": [
    {
      "id": "API-AUTH-UPDATE-USER-SUCCESS-001",
      "given": "An authenticated user with valid profile data",
      "when": "User updates their profile information",
      "then": "Returns 200 OK with updated user data",
      "validation": {
        "setup": {
          "executeQuery": [
            "INSERT INTO users (id, email, password_hash, name, image, email_verified, created_at, updated_at) VALUES (1, 'test@example.com', '$2a$10$YourHashedPasswordHere', 'Old Name', 'https://old-avatar.com/old.jpg', true, NOW(), NOW())",
            "INSERT INTO sessions (id, user_id, token, expires_at, created_at) VALUES (1, 1, 'valid_token', NOW() + INTERVAL '7 days', NOW())"
          ],
          "authUser": {
            "id": 1,
            "sessionId": 1
          },
          "apiRequest": {
            "method": "PATCH",
            "endpoint": "/api/auth/update-user",
            "headers": {
              "Authorization": "Bearer valid_token",
              "Content-Type": "application/json"
            },
            "body": {
              "name": "New Name",
              "image": "https://new-avatar.com/new.jpg"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 200 OK",
            "expectedStatus": 200
          },
          {
            "description": "Response contains updated user data",
            "expectedSchema": {
              "type": "object",
              "properties": {
                "user": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string" },
                    "email": { "type": "string" },
                    "name": { "type": "string" },
                    "image": { "type": "string" },
                    "emailVerified": { "type": "boolean" }
                  },
                  "required": ["id", "email", "name"]
                }
              },
              "required": ["user"]
            }
          },
          {
            "description": "User data is updated in database",
            "validateDatabaseState": {
              "query": "SELECT name, image FROM users WHERE id = 1",
              "expectedRows": 1,
              "rowValidation": {
                "name": {
                  "equals": "New Name"
                },
                "image": {
                  "equals": "https://new-avatar.com/new.jpg"
                }
              }
            }
          }
        ]
      }
    },
    {
      "id": "API-AUTH-UPDATE-USER-SUCCESS-PARTIAL-UPDATE-001",
      "given": "An authenticated user",
      "when": "User updates only name field",
      "then": "Returns 200 OK with updated name, image unchanged",
      "validation": {
        "setup": {
          "executeQuery": [
            "INSERT INTO users (id, email, password_hash, name, image, email_verified, created_at, updated_at) VALUES (1, 'test@example.com', '$2a$10$YourHashedPasswordHere', 'Old Name', 'https://old-avatar.com/old.jpg', true, NOW(), NOW())",
            "INSERT INTO sessions (id, user_id, token, expires_at, created_at) VALUES (1, 1, 'valid_token', NOW() + INTERVAL '7 days', NOW())"
          ],
          "authUser": {
            "id": 1,
            "sessionId": 1
          },
          "apiRequest": {
            "method": "PATCH",
            "endpoint": "/api/auth/update-user",
            "headers": {
              "Authorization": "Bearer valid_token",
              "Content-Type": "application/json"
            },
            "body": {
              "name": "Updated Name Only"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 200 OK",
            "expectedStatus": 200
          },
          {
            "description": "Name is updated, image remains unchanged",
            "validateDatabaseState": {
              "query": "SELECT name, image FROM users WHERE id = 1",
              "expectedRows": 1,
              "rowValidation": {
                "name": {
                  "equals": "Updated Name Only"
                },
                "image": {
                  "equals": "https://old-avatar.com/old.jpg"
                }
              }
            }
          }
        ]
      }
    },
    {
      "id": "API-AUTH-UPDATE-USER-PERMISSIONS-UNAUTHORIZED-NO-TOKEN-001",
      "given": "A running server",
      "when": "Unauthenticated user attempts to update profile",
      "then": "Returns 401 Unauthorized",
      "validation": {
        "setup": {
          "apiRequest": {
            "method": "PATCH",
            "endpoint": "/api/auth/update-user",
            "headers": {
              "Content-Type": "application/json"
            },
            "body": {
              "name": "New Name"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 401 Unauthorized",
            "expectedStatus": 401
          },
          {
            "description": "Response contains error about missing authentication",
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" },
                "code": { "type": "string" }
              }
            }
          }
        ]
      }
    },
    {
      "id": "API-AUTH-UPDATE-USER-SECURITY-XSS-PREVENTION-NAME-001",
      "given": "An authenticated user",
      "when": "User submits name with XSS payload",
      "then": "Returns 200 OK with sanitized name (XSS payload neutralized)",
      "validation": {
        "setup": {
          "executeQuery": [
            "INSERT INTO users (id, email, password_hash, name, email_verified, created_at, updated_at) VALUES (1, 'test@example.com', '$2a$10$YourHashedPasswordHere', 'Old Name', true, NOW(), NOW())",
            "INSERT INTO sessions (id, user_id, token, expires_at, created_at) VALUES (1, 1, 'valid_token', NOW() + INTERVAL '7 days', NOW())"
          ],
          "authUser": {
            "id": 1,
            "sessionId": 1
          },
          "apiRequest": {
            "method": "PATCH",
            "endpoint": "/api/auth/update-user",
            "headers": {
              "Authorization": "Bearer valid_token",
              "Content-Type": "application/json"
            },
            "body": {
              "name": "<script>alert('xss')</script>Malicious"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 200 OK",
            "expectedStatus": 200
          },
          {
            "description": "Name is sanitized (no script tags)",
            "validateResponseData": {
              "user.name": {
                "notContains": "<script>"
              }
            }
          }
        ]
      }
    },
    {
      "id": "API-AUTH-UPDATE-USER-EDGE-CASE-UNICODE-NAME-001",
      "given": "An authenticated user",
      "when": "User updates name with Unicode characters",
      "then": "Returns 200 OK with Unicode name preserved",
      "validation": {
        "setup": {
          "executeQuery": [
            "INSERT INTO users (id, email, password_hash, name, email_verified, created_at, updated_at) VALUES (1, 'test@example.com', '$2a$10$YourHashedPasswordHere', 'Old Name', true, NOW(), NOW())",
            "INSERT INTO sessions (id, user_id, token, expires_at, created_at) VALUES (1, 1, 'valid_token', NOW() + INTERVAL '7 days', NOW())"
          ],
          "authUser": {
            "id": 1,
            "sessionId": 1
          },
          "apiRequest": {
            "method": "PATCH",
            "endpoint": "/api/auth/update-user",
            "headers": {
              "Authorization": "Bearer valid_token",
              "Content-Type": "application/json"
            },
            "body": {
              "name": "José García 日本語"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 200 OK",
            "expectedStatus": 200
          },
          {
            "description": "Unicode characters in name are preserved",
            "validateResponseData": {
              "user.name": {
                "equals": "José García 日本語"
              }
            }
          }
        ]
      }
    },
    {
      "id": "API-AUTH-UPDATE-USER-EDGE-CASE-NULL-IMAGE-001",
      "given": "An authenticated user with profile image",
      "when": "User sets image to null (removes profile image)",
      "then": "Returns 200 OK with image removed",
      "validation": {
        "setup": {
          "executeQuery": [
            "INSERT INTO users (id, email, password_hash, name, image, email_verified, created_at, updated_at) VALUES (1, 'test@example.com', '$2a$10$YourHashedPasswordHere', 'Test User', 'https://avatar.com/old.jpg', true, NOW(), NOW())",
            "INSERT INTO sessions (id, user_id, token, expires_at, created_at) VALUES (1, 1, 'valid_token', NOW() + INTERVAL '7 days', NOW())"
          ],
          "authUser": {
            "id": 1,
            "sessionId": 1
          },
          "apiRequest": {
            "method": "PATCH",
            "endpoint": "/api/auth/update-user",
            "headers": {
              "Authorization": "Bearer valid_token",
              "Content-Type": "application/json"
            },
            "body": {
              "image": null
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 200 OK",
            "expectedStatus": 200
          },
          {
            "description": "Image is removed from database",
            "validateDatabaseState": {
              "query": "SELECT image FROM users WHERE id = 1",
              "expectedRows": 1,
              "rowValidation": {
                "image": {
                  "isNull": true
                }
              }
            }
          }
        ]
      }
    }
  ]
}

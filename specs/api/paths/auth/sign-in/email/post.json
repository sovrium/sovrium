{
  "summary": "Sign in with email and password",
  "description": "Authenticates an existing user using email and password credentials. Returns session token upon successful authentication.",
  "operationId": "signInEmail",
  "tags": ["authentication"],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "requestBody": {
    "required": true,
    "content": {
      "application/json": {
        "schema": {
          "type": "object",
          "required": ["email", "password"],
          "properties": {
            "email": {
              "type": "string",
              "format": "email",
              "description": "Email of the user",
              "example": "user@example.com"
            },
            "password": {
              "type": "string",
              "format": "password",
              "description": "Password of the user",
              "example": "SecurePass123!"
            },
            "callbackURL": {
              "type": "string",
              "format": "uri",
              "description": "Callback URL to use as a redirect after sign in",
              "nullable": true,
              "example": "https://app.example.com/dashboard"
            },
            "rememberMe": {
              "type": "boolean",
              "description": "If true, extends session expiration time",
              "nullable": true,
              "default": false,
              "example": true
            }
          }
        }
      }
    }
  },
  "responses": {
    "200": {
      "description": "Success - User authenticated successfully",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "required": ["token", "user"],
            "properties": {
              "token": {
                "type": "string",
                "description": "Session authentication token",
                "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
              },
              "user": {
                "$ref": "../../../../components/schemas/User.json"
              }
            }
          },
          "examples": {
            "authenticated": {
              "summary": "Successful authentication",
              "value": {
                "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
                "user": {
                  "id": "user_123abc",
                  "email": "user@example.com",
                  "name": "John Doe",
                  "image": "https://avatar.example.com/john.jpg",
                  "emailVerified": true,
                  "createdAt": "2025-01-10T08:00:00Z",
                  "updatedAt": "2025-01-15T10:30:00Z"
                }
              }
            }
          }
        }
      }
    },
    "400": {
      "$ref": "../../../../components/responses/ValidationError.json"
    },
    "401": {
      "description": "Unauthorized - Invalid credentials",
      "content": {
        "application/json": {
          "schema": {
            "$ref": "../../../../components/schemas/Error.json"
          },
          "examples": {
            "invalidCredentials": {
              "value": {
                "error": "Invalid credentials",
                "code": "INVALID_CREDENTIALS",
                "details": {
                  "message": "Email or password is incorrect"
                }
              }
            }
          }
        }
      }
    }
  },
  "x-specs": [
    {
      "id": "API-AUTH-SIGN-IN-EMAIL-SUCCESS-001",
      "given": "A registered user with valid credentials",
      "when": "User submits correct email and password",
      "then": "Returns 200 OK with session token and user data",
      "validation": {
        "setup": {
          "executeQuery": [
            "INSERT INTO users (id, email, password_hash, name, email_verified, created_at, updated_at) VALUES (1, 'test@example.com', '$2a$10$YourHashedPasswordHere', 'Test User', true, NOW(), NOW())"
          ],
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/auth/sign-in/email",
            "headers": {
              "Content-Type": "application/json"
            },
            "body": {
              "email": "test@example.com",
              "password": "ValidPassword123!"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 200 OK",
            "expectedStatus": 200
          },
          {
            "description": "Response contains session token and user data",
            "expectedSchema": {
              "type": "object",
              "properties": {
                "token": { "type": "string" },
                "user": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string" },
                    "email": { "type": "string" },
                    "name": { "type": "string" },
                    "emailVerified": { "type": "boolean" },
                    "createdAt": { "type": "string" },
                    "updatedAt": { "type": "string" }
                  },
                  "required": ["id", "email", "name", "emailVerified", "createdAt", "updatedAt"]
                }
              },
              "required": ["token", "user"]
            }
          }
        ]
      }
    },
    {
      "id": "API-AUTH-SIGN-IN-EMAIL-VALIDATION-REQUIRED-EMAIL-001",
      "given": "A running server",
      "when": "User submits request without email field",
      "then": "Returns 400 Bad Request with validation error",

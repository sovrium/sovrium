          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/auth/sign-in/email",
            "headers": {
              "Content-Type": "application/json"
            },
            "body": {
              "password": "ValidPassword123!"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 400 Bad Request",
            "expectedStatus": 400
          },
          {
            "description": "Response contains validation error for email field",
            "expectedSchema": {
              "type": "object",

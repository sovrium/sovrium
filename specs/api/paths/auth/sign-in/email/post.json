    {
      "id": "API-AUTH-SIGN-IN-EMAIL-PERMISSIONS-INVALID-CREDENTIALS-WRONG-PASSWORD-001",
      "given": "A registered user",
      "when": "User submits correct email but wrong password",
      "then": "Returns 401 Unauthorized with generic error to prevent enumeration",
      "validation": {
        "setup": {
          "executeQuery": [
            "INSERT INTO users (id, email, password_hash, name, email_verified, created_at, updated_at) VALUES (1, 'test@example.com', '$2a$10$YourHashedPasswordHere', 'Test User', true, NOW(), NOW())"
          ],
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/auth/sign-in/email",
            "headers": {
              "Content-Type": "application/json"
            },
            "body": {
              "email": "test@example.com",
              "password": "WrongPassword123!"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 401 Unauthorized",
            "expectedStatus": 401
          },
          {
            "description": "Response contains generic error message",
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" },
                "code": { "type": "string" }
              }
            }
          }
        ]
      }
    },
    {
      "id": "API-AUTH-SIGN-IN-EMAIL-PERMISSIONS-INVALID-CREDENTIALS-NONEXISTENT-EMAIL-001",
      "given": "A running server with no registered user",
      "when": "User attempts sign-in with non-existent email",
      "then": "Returns 401 Unauthorized with same generic error to prevent enumeration",
      "validation": {
        "setup": {
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/auth/sign-in/email",
            "headers": {
              "Content-Type": "application/json"
            },
            "body": {
              "email": "nonexistent@example.com",
              "password": "AnyPassword123!"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 401 Unauthorized (same as wrong password)",
            "expectedStatus": 401
          },
          {
            "description": "Response contains generic error message to prevent enumeration",
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" },
                "code": { "type": "string" }
              }
            }
          }
        ]
      }
    },
    {
      "id": "API-AUTH-SIGN-IN-EMAIL-EDGE-CASE-EMAIL-CASE-INSENSITIVE-001",
      "given": "A registered user with lowercase email",
      "when": "User signs in with uppercase email variation",
      "then": "Returns 200 OK with session token (case-insensitive matching)",
      "validation": {
        "setup": {
          "executeQuery": [
            "INSERT INTO users (id, email, password_hash, name, email_verified, created_at, updated_at) VALUES (1, 'test@example.com', '$2a$10$YourHashedPasswordHere', 'Test User', true, NOW(), NOW())"
          ],
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/auth/sign-in/email",
            "headers": {
              "Content-Type": "application/json"
            },
            "body": {
              "email": "TEST@EXAMPLE.COM",
              "password": "ValidPassword123!"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 200 OK despite case difference",
            "expectedStatus": 200
          },
          {
            "description": "Response contains session token and user data",
            "expectedSchema": {
              "type": "object",
              "properties": {
                "token": { "type": "string" },
                "user": { "type": "object" }
              },
              "required": ["token", "user"]
            }
          }
        ]
      }
    },
    {
      "id": "API-AUTH-SIGN-IN-EMAIL-EDGE-CASE-REMEMBER-ME-001",
      "given": "A registered user",
      "when": "User signs in with rememberMe set to true",

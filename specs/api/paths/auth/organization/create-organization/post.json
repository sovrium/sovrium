{
  "summary": "Create organization",
  "description": "Creates a new organization and sets the authenticated user as the organization owner. Organizations provide multi-tenancy and team collaboration features.",
  "operationId": "createOrganization",
  "tags": ["organization"],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "requestBody": {
    "required": true,
    "content": {
      "application/json": {
        "schema": {
          "type": "object",
          "required": ["name"],
          "properties": {
            "name": {
              "type": "string",
              "description": "Organization name",
              "minLength": 1,
              "maxLength": 100,
              "example": "Acme Corporation"
            },
            "slug": {
              "type": "string",
              "description": "URL-friendly organization identifier (auto-generated from name if not provided)",
              "pattern": "^[a-z0-9-]+$",
              "minLength": 2,
              "maxLength": 50,
              "nullable": true,
              "example": "acme-corporation"
            },
            "metadata": {
              "type": "object",
              "description": "Optional metadata for the organization",
              "nullable": true,
              "additionalProperties": true,
              "example": {
                "industry": "Technology",
                "size": "50-100"
              }
            }
          }
        }
      }
    }
  },
  "responses": {
    "201": {
      "description": "Success - Organization created",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "required": ["organization"],
            "properties": {
              "organization": {
                "type": "object",
                "required": ["id", "name", "slug", "createdAt"],
                "properties": {
                  "id": {
                    "type": "string",
                    "description": "Organization ID"
                  },
                  "name": {
                    "type": "string",
                    "description": "Organization name"
                  },
                  "slug": {
                    "type": "string",
                    "description": "Organization slug"
                  },
                  "metadata": {
                    "type": "object",
                    "nullable": true
                  },
                  "createdAt": {
                    "type": "string",
                    "format": "date-time"
                  }
                }
              }
            }
          },
          "examples": {
            "organizationCreated": {
              "summary": "Organization created successfully",
              "value": {
                "organization": {
                  "id": "org_123abc",
                  "name": "Acme Corporation",
                  "slug": "acme-corporation",
                  "metadata": {
                    "industry": "Technology"
                  },
                  "createdAt": "2025-01-15T10:00:00Z"
                }
              }
            }
          }
        }
      }
    },
    "400": {
      "$ref": "../../../../components/responses/ValidationError.json"
    },
    "401": {
      "description": "Unauthorized - User not authenticated",
      "content": {
        "application/json": {
          "schema": {
            "$ref": "../../../../components/schemas/Error.json"
          }
        }
      }
    },
    "409": {
      "$ref": "../../../../components/responses/ConflictError.json"
    }
  },
  "x-specs": [
    {
      "id": "API-ORG-CREATE-ORGANIZATION-SUCCESS-001",
      "given": "An authenticated user",
      "when": "User creates a new organization with valid data",
      "then": "Returns 201 Created with organization data and user is set as owner",
      "validation": {
        "setup": {
          "executeQuery": [
            "INSERT INTO users (id, email, password_hash, name, email_verified, created_at, updated_at) VALUES (1, 'user@example.com', '$2a$10$YourHashedPasswordHere', 'Test User', true, NOW(), NOW())",
            "INSERT INTO sessions (id, user_id, token, expires_at, created_at) VALUES (1, 1, 'user_token', NOW() + INTERVAL '7 days', NOW())"
          ],
          "authUser": {
            "id": 1,
            "sessionId": 1
          },
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/auth/organization/create-organization",
            "headers": {
              "Authorization": "Bearer user_token",
              "Content-Type": "application/json"
            },
            "body": {
              "name": "Acme Corporation",
              "slug": "acme-corp"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 201 Created",
            "expectedStatus": 201
          },
          {
            "description": "Response contains organization data",
            "expectedSchema": {
              "type": "object",
              "properties": {
                "organization": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string" },
                    "name": { "type": "string" },
                    "slug": { "type": "string" },
                    "createdAt": { "type": "string" }
                  },
                  "required": ["id", "name", "slug", "createdAt"]
                }
              },
              "required": ["organization"]
            }
          },
          {
            "description": "Organization is created in database",
            "validateDatabaseState": {
              "query": "SELECT name, slug FROM organizations WHERE slug = 'acme-corp'",
              "expectedRows": 1,
              "rowValidation": {
                "name": {
                  "equals": "Acme Corporation"
                },
                "slug": {
                  "equals": "acme-corp"
                }
              }
            }
          },
          {
            "description": "User is set as organization owner",
            "validateDatabaseState": {
              "query": "SELECT role FROM organization_members WHERE user_id = 1 AND organization_id = (SELECT id FROM organizations WHERE slug = 'acme-corp')",
              "expectedRows": 1,
              "rowValidation": {
                "role": {
                  "equals": "owner"
                }
              }
            }
          }
        ]
      }
    },
    {
      "id": "API-ORG-CREATE-ORGANIZATION-SUCCESS-AUTO-SLUG-001",
      "given": "An authenticated user",
      "when": "User creates organization without providing slug",
      "then": "Returns 201 Created with auto-generated slug from name",
      "validation": {
        "setup": {
          "executeQuery": [
            "INSERT INTO users (id, email, password_hash, name, email_verified, created_at, updated_at) VALUES (1, 'user@example.com', '$2a$10$YourHashedPasswordHere', 'Test User', true, NOW(), NOW())",
            "INSERT INTO sessions (id, user_id, token, expires_at, created_at) VALUES (1, 1, 'user_token', NOW() + INTERVAL '7 days', NOW())"
          ],
          "authUser": {
            "id": 1,
            "sessionId": 1
          },
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/auth/organization/create-organization",
            "headers": {
              "Authorization": "Bearer user_token",
              "Content-Type": "application/json"
            },
            "body": {
              "name": "My Company"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 201 Created",
            "expectedStatus": 201
          },
          {
            "description": "Slug is auto-generated from name",
            "validateResponseData": {
              "organization.slug": {
                "equals": "my-company"
              }
            }
          }
        ]
      }
    },
    {
      "id": "API-ORG-CREATE-ORGANIZATION-VALIDATION-REQUIRED-NAME-001",
      "given": "An authenticated user",
      "when": "User submits request without name field",
      "then": "Returns 400 Bad Request with validation error",
      "validation": {
        "setup": {
          "executeQuery": [
            "INSERT INTO users (id, email, password_hash, name, email_verified, created_at, updated_at) VALUES (1, 'user@example.com', '$2a$10$YourHashedPasswordHere', 'Test User', true, NOW(), NOW())",
            "INSERT INTO sessions (id, user_id, token, expires_at, created_at) VALUES (1, 1, 'user_token', NOW() + INTERVAL '7 days', NOW())"
          ],
          "authUser": {
            "id": 1,
            "sessionId": 1
          },
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/auth/organization/create-organization",
            "headers": {
              "Authorization": "Bearer user_token",
              "Content-Type": "application/json"
            },
            "body": {}
          }
        },
        "assertions": [
          {
            "description": "Returns 400 Bad Request",
            "expectedStatus": 400
          },
          {
            "description": "Response contains validation error for name field",
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" },
                "code": { "type": "string" }
              }
            }
          }
        ]
      }
    },
    {
      "id": "API-ORG-CREATE-ORGANIZATION-PERMISSIONS-UNAUTHORIZED-NO-TOKEN-001",
      "given": "A running server",
      "when": "Unauthenticated user attempts to create organization",
      "then": "Returns 401 Unauthorized",
      "validation": {
        "setup": {
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/auth/organization/create-organization",
            "headers": {
              "Content-Type": "application/json"
            },
            "body": {
              "name": "Acme Corporation"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 401 Unauthorized",
            "expectedStatus": 401
          },
          {
            "description": "Response contains error about missing authentication",
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" },
                "code": { "type": "string" }
              }
            }
          }
        ]
      }
    },
    {
      "id": "API-ORG-CREATE-ORGANIZATION-CONFLICT-DUPLICATE-SLUG-001",
      "given": "An authenticated user and an existing organization",
      "when": "User attempts to create organization with existing slug",
      "then": "Returns 409 Conflict error",
      "validation": {
        "setup": {
          "executeQuery": [
            "INSERT INTO users (id, email, password_hash, name, email_verified, created_at, updated_at) VALUES (1, 'user@example.com', '$2a$10$YourHashedPasswordHere', 'Test User', true, NOW(), NOW())",
            "INSERT INTO organizations (id, name, slug, created_at) VALUES (1, 'Existing Org', 'existing-org', NOW())",
            "INSERT INTO sessions (id, user_id, token, expires_at, created_at) VALUES (1, 1, 'user_token', NOW() + INTERVAL '7 days', NOW())"
          ],
          "authUser": {
            "id": 1,
            "sessionId": 1
          },
          "apiRequest": {
            "method": "POST",
            "endpoint": "/api/auth/organization/create-organization",
            "headers": {
              "Authorization": "Bearer user_token",
              "Content-Type": "application/json"
            },
            "body": {
              "name": "Another Org",
              "slug": "existing-org"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 409 Conflict",
            "expectedStatus": 409
          },
          {
            "description": "Response contains error about slug already in use",
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" },
                "code": { "type": "string" }
              }
            }
          }
        ]
      }
    }
  ]
}

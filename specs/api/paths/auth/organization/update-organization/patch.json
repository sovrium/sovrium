{
  "summary": "Update organization",
  "description": "Updates organization details. Only organization owners and admins can update the organization. Supports partial updates.",
  "operationId": "updateOrganization",
  "tags": ["organization"],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "requestBody": {
    "required": true,
    "content": {
      "application/json": {
        "schema": {
          "type": "object",
          "required": ["organizationId"],
          "properties": {
            "organizationId": {
              "type": "string",
              "description": "The ID of the organization to update",
              "example": "org_123abc"
            },
            "name": {
              "type": "string",
              "description": "Updated organization name",
              "minLength": 1,
              "maxLength": 100,
              "nullable": true,
              "example": "Acme Corp Updated"
            },
            "slug": {
              "type": "string",
              "description": "Updated URL-friendly organization identifier",
              "pattern": "^[a-z0-9-]+$",
              "minLength": 2,
              "maxLength": 50,
              "nullable": true,
              "example": "acme-corp-updated"
            },
            "metadata": {
              "type": "object",
              "description": "Updated metadata for the organization",
              "nullable": true,
              "additionalProperties": true,
              "example": {
                "industry": "Technology",
                "size": "100-200"
              }
            }
          }
        }
      }
    }
  },
  "responses": {
    "200": {
      "description": "Success - Organization updated",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "required": ["organization"],
            "properties": {
              "organization": {
                "type": "object",
                "required": ["id", "name", "slug", "createdAt", "updatedAt"],
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "slug": {
                    "type": "string"
                  },
                  "metadata": {
                    "type": "object",
                    "nullable": true
                  },
                  "createdAt": {
                    "type": "string",
                    "format": "date-time"
                  },
                  "updatedAt": {
                    "type": "string",
                    "format": "date-time"
                  }
                }
              }
            }
          },
          "examples": {
            "organizationUpdated": {
              "summary": "Organization updated successfully",
              "value": {
                "organization": {
                  "id": "org_123abc",
                  "name": "Acme Corp Updated",
                  "slug": "acme-corp",
                  "metadata": {
                    "industry": "Technology"
                  },
                  "createdAt": "2025-01-15T10:00:00Z",
                  "updatedAt": "2025-01-15T12:00:00Z"
                }
              }
            }
          }
        }
      }
    },
    "400": {
      "$ref": "../../../../components/responses/ValidationError.json"
    },
    "401": {
      "description": "Unauthorized - User not authenticated",
      "content": {
        "application/json": {
          "schema": {
            "$ref": "../../../../components/schemas/Error.json"
          }
        }
      }
    },
    "403": {
      "description": "Forbidden - User does not have permission to update organization",
      "content": {
        "application/json": {
          "schema": {
            "$ref": "../../../../components/schemas/Error.json"
          }
        }
      }
    },
    "404": {
      "description": "Not Found - Organization not found",
      "content": {
        "application/json": {
          "schema": {
            "$ref": "../../../../components/schemas/Error.json"
          }
        }
      }
    },
    "409": {
      "$ref": "../../../../components/responses/ConflictError.json"
    }
  },
  "x-specs": [
    {
      "id": "API-ORG-UPDATE-ORGANIZATION-SUCCESS-001",
      "given": "An authenticated organization owner",
      "when": "Owner updates organization details",
      "then": "Returns 200 OK with updated organization data",
      "validation": {
        "setup": {
          "executeQuery": [
            "INSERT INTO users (id, email, password_hash, name, email_verified, created_at, updated_at) VALUES (1, 'owner@example.com', '$2a$10$YourHashedPasswordHere', 'Owner User', true, NOW(), NOW())",
            "INSERT INTO organizations (id, name, slug, created_at, updated_at) VALUES (1, 'Old Name', 'old-slug', NOW(), NOW())",
            "INSERT INTO organization_members (id, organization_id, user_id, role, created_at) VALUES (1, 1, 1, 'owner', NOW())",
            "INSERT INTO sessions (id, user_id, token, expires_at, created_at) VALUES (1, 1, 'owner_token', NOW() + INTERVAL '7 days', NOW())"
          ],
          "authUser": {
            "id": 1,
            "sessionId": 1,
            "organizationId": 1
          },
          "apiRequest": {
            "method": "PATCH",
            "endpoint": "/api/auth/organization/update-organization",
            "headers": {
              "Authorization": "Bearer owner_token",
              "Content-Type": "application/json"
            },
            "body": {
              "organizationId": "1",
              "name": "New Name",
              "slug": "new-slug"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 200 OK",
            "expectedStatus": 200
          },
          {
            "description": "Response contains updated organization",
            "expectedSchema": {
              "type": "object",
              "properties": {
                "organization": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string" },
                    "name": { "type": "string" },
                    "slug": { "type": "string" },
                    "updatedAt": { "type": "string" }
                  },
                  "required": ["id", "name", "slug", "updatedAt"]
                }
              },
              "required": ["organization"]
            }
          },
          {
            "description": "Organization is updated in database",
            "validateDatabaseState": {
              "query": "SELECT name, slug FROM organizations WHERE id = 1",
              "expectedRows": 1,
              "rowValidation": {
                "name": {
                  "equals": "New Name"
                },
                "slug": {
                  "equals": "new-slug"
                }
              }
            }
          }
        ]
      }
    },
    {

            "INSERT INTO organizations (id, name, slug, created_at, updated_at) VALUES (2, 'Existing Org', 'existing-slug', NOW(), NOW())",
            "INSERT INTO organization_members (id, organization_id, user_id, role, created_at) VALUES (1, 1, 1, 'owner', NOW())",
            "INSERT INTO sessions (id, user_id, token, expires_at, created_at) VALUES (1, 1, 'owner_token', NOW() + INTERVAL '7 days', NOW())"
          ],
          "authUser": {
            "id": 1,
            "sessionId": 1,
            "organizationId": 1
          },
          "apiRequest": {
            "method": "PATCH",
            "endpoint": "/api/auth/organization/update-organization",
            "headers": {
              "Authorization": "Bearer owner_token",
              "Content-Type": "application/json"
            },
            "body": {
              "organizationId": "1",
              "slug": "existing-slug"
            }
          }
        },
        "assertions": [
          {
            "description": "Returns 409 Conflict",
            "expectedStatus": 409
          },
          {
            "description": "Response contains error about slug already in use",
            "expectedSchema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" },
                "code": { "type": "string" }
              }
            }
          }
        ]

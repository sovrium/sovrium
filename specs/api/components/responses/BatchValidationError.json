{
  "description": "Validation error - One or more records in the batch failed validation",
  "content": {
    "application/json": {
      "schema": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "enum": ["BatchValidationError"]
          },
          "message": {
            "type": "string",
            "description": "Human-readable error message"
          },
          "details": {
            "type": "array",
            "description": "Validation errors for each failed record",
            "items": {
              "type": "object",
              "properties": {
                "index": {
                  "type": "integer",
                  "description": "Index of the failed record in the input array (0-based)"
                },
                "field": {
                  "type": "string",
                  "description": "Field name that failed validation"
                },
                "message": {
                  "type": "string",
                  "description": "Validation error message"
                }
              },
              "required": ["index", "field", "message"]
            }
          }
        },
        "required": ["error", "message", "details"]
      },
      "example": {
        "error": "BatchValidationError",
        "message": "2 records failed validation",
        "details": [
          {
            "index": 0,
            "field": "email",
            "message": "Invalid email format"
          },
          {
            "index": 3,
            "field": "age",
            "message": "Must be a positive integer"
          }
        ]
      }
    }
  }
}

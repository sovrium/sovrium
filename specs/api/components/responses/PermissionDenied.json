{
  "description": "Permission denied - User lacks required permissions for this resource",
  "content": {
    "application/json": {
      "schema": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "enum": ["PermissionDenied"]
          },
          "message": {
            "type": "string",
            "description": "Human-readable error message"
          }
        },
        "required": ["error", "message"]
      },
      "example": {
        "error": "PermissionDenied",
        "message": "You do not have permission to perform this action"
      }
    }
  }
}

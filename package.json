{
  "name": "sovrium",
  "version": "0.0.1",
  "packageManager": "bun@1.3.3",
  "description": "Configuration-driven web application platform built with Bun, Effect, React, and Tailwind CSS",
  "module": "src/index.ts",
  "bin": {
    "sovrium": "./src/cli.ts"
  },
  "author": {
    "name": "Thomas JEANNEAU",
    "company": "ESSENTIAL SERVICES",
    "email": "support@sovrium.com"
  },
  "license": "SEE LICENSE IN LICENSE.md",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/sovrium/sovrium.git"
  },
  "bugs": {
    "url": "https://github.com/sovrium/sovrium/issues"
  },
  "homepage": "https://github.com/sovrium/sovrium#readme",
  "keywords": [
    "sovrium",
    "bun",
    "typescript",
    "framework",
    "schema",
    "effect",
    "hono",
    "better-auth",
    "configuration"
  ],
  "files": [
    "drizzle/*",
    "drizzle/**/*",
    "schemas/*",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.css",
    "!src/**/*.test.ts",
    "!src/**/*.test.tsx",
    "!src/**/*.spec.ts",
    "!src/**/*.spec.tsx",
    "LICENSE.md",
    "LICENSE_EE.md",
    "README.md",
    "CHANGELOG.md",
    "tsconfig.json"
  ],
  "scripts": {
    "prepare": "effect-language-service patch",
    "start": "bun run src/cli.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "clean": "knip",
    "clean:fix": "knip --fix",
    "lint": "eslint . --cache --cache-location .eslintcache",
    "lint:fix": "eslint . --fix --cache --cache-location .eslintcache",
    "lint:workflows": "actionlint",
    "quality": "bun run scripts/check-quality.ts",
    "test:unit": "bun test --concurrent .test.ts .test.tsx",
    "test:e2e": "playwright test",
    "test:e2e:spec": "playwright test --grep='@spec'",
    "test:e2e:regression": "playwright test --grep='@regression'",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:update-snapshots": "playwright test --update-snapshots",
    "test:e2e:update-snapshots:spec": "playwright test --grep='@spec' --update-snapshots",
    "test:e2e:update-snapshots:regression": "playwright test --grep='@regression' --update-snapshots",
    "test:all": "bun test:unit && bun test:e2e:regression",
    "test:cleanup": "bun run scripts/kill-zombie-processes.ts",
    "license": "bun run scripts/add-license-headers.ts",
    "export:schema": "bun run scripts/export-schema.ts",
    "export:openapi": "bun run scripts/export-openapi.ts",
    "analyze:specs": "bun run scripts/analyze-specs.ts",
    "validate:spec-counts": "bun run scripts/validate-spec-counts.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:drop": "drizzle-kit drop",
    "db:check": "drizzle-kit check",
    "website:build": "bun run website/build.ts",
    "website:serve": "bun --watch run website/serve.ts",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@apidevtools/json-schema-ref-parser": "^15.1.3",
    "@effect/language-service": "^0.57.1",
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@testcontainers/postgresql": "^11.9.0",
    "@types/bun": "^1.3.3",
    "@types/dompurify": "^3.2.0",
    "@types/node": "^24.10.1",
    "@types/nodemailer": "^7.0.4",
    "@types/pg": "^8.15.6",
    "@types/react-dom": "^19.2.3",
    "actionlint": "^2.0.6",
    "drizzle-kit": "^0.31.7",
    "eslint": "^9.39.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-boundaries": "^5.3.0",
    "eslint-plugin-check-file": "^3.3.1",
    "eslint-plugin-drizzle": "^0.2.3",
    "eslint-plugin-functional": "^9.0.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-playwright": "^2.4.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-unicorn": "^62.0.0",
    "globals": "^16.5.0",
    "knip": "^5.71.0",
    "pg": "^8.16.3",
    "playwright": "^1.57.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "semantic-release": "^25.0.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@effect/experimental": "^0.57.10",
    "@hono/zod-openapi": "^1.1.5",
    "@hookform/resolvers": "^5.2.2",
    "@scalar/hono-api-reference": "^0.9.25",
    "@tailwindcss/postcss": "^4.1.17",
    "@tanstack/react-query": "^5.90.11",
    "@tanstack/react-query-devtools": "^5.91.1",
    "@tanstack/react-table": "^8.21.3",
    "better-auth": "^1.4.4",
    "clsx": "^2.1.1",
    "dompurify": "^3.3.0",
    "drizzle-orm": "^0.44.7",
    "effect": "^3.19.8",
    "hono": "^4.10.7",
    "jiti": "^2.6.1",
    "lucide-react": "^0.555.0",
    "nodemailer": "^7.0.11",
    "postcss": "^8.5.6",
    "prettier": "3.7.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.67.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "tw-animate-css": "^1.4.0",
    "zod": "^4.1.13"
  }
}

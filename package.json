{
  "name": "sovrium",
  "version": "0.0.1",
  "packageManager": "bun@1.3.9",
  "description": "Configuration-driven web application platform built with Bun, Effect, React, and Tailwind CSS",
  "module": "src/index.ts",
  "bin": {
    "sovrium": "./src/cli.ts"
  },
  "author": {
    "name": "Thomas JEANNEAU",
    "company": "ESSENTIAL SERVICES",
    "email": "support@sovrium.com"
  },
  "license": "SEE LICENSE IN LICENSE.md",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/sovrium/sovrium.git"
  },
  "bugs": {
    "url": "https://github.com/sovrium/sovrium/issues"
  },
  "homepage": "https://github.com/sovrium/sovrium#readme",
  "keywords": [
    "sovrium",
    "bun",
    "typescript",
    "framework",
    "schema",
    "effect",
    "hono",
    "better-auth",
    "configuration"
  ],
  "files": [
    "drizzle/*",
    "drizzle/**/*",
    "schemas/*",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.css",
    "!src/**/*.test.ts",
    "!src/**/*.test.tsx",
    "!src/**/*.spec.ts",
    "!src/**/*.spec.tsx",
    "LICENSE.md",
    "LICENSE_EE.md",
    "README.md",
    "CHANGELOG.md",
    "tsconfig.json"
  ],
  "scripts": {
    "prepare": "effect-language-service patch > /dev/null 2>&1",
    "start": "bun run src/cli.ts --watch",
    "format": "prettier --write . --cache --cache-location .prettiercache",
    "format:check": "prettier --check . --cache --cache-location .prettiercache",
    "typecheck": "tsc --noEmit --incremental",
    "clean": "knip",
    "clean:fix": "knip --fix",
    "lint": "eslint . --cache --cache-location .eslintcache",
    "lint:fix": "eslint . --fix --cache --cache-location .eslintcache",
    "lint:workflows": "actionlint",
    "quality": "bun run scripts/check-quality.ts",
    "test:unit": "bun test .test.ts .test.tsx",
    "test:unit:concurrent": "bun test --concurrent .test.ts .test.tsx",
    "test:e2e": "playwright test",
    "test:e2e:spec": "playwright test --grep='@spec'",
    "test:e2e:regression": "playwright test --grep='@regression'",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:update-snapshots": "playwright test --update-snapshots",
    "test:e2e:update-snapshots:spec": "playwright test --grep='@spec' --update-snapshots",
    "test:e2e:update-snapshots:regression": "playwright test --grep='@regression' --update-snapshots",
    "test:all": "bun test:unit && bun test:e2e:regression",
    "test:cleanup": "bun run scripts/kill-zombie-processes.ts",
    "license": "bun run scripts/add-license-headers.ts",
    "export:schema": "bun run scripts/export-schema.ts",
    "export:openapi": "bun run scripts/export-openapi.ts",
    "progress": "bun run scripts/check-progress.ts",
    "validate:specs": "bun run scripts/validate-specs.ts",
    "validate:docs:versions": "bun run scripts/validate-doc-versions.ts",
    "check:all": "bun run quality && bun run progress --strict",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:drop": "drizzle-kit drop",
    "db:check": "drizzle-kit check",
    "website": "bun --watch run website/start.ts",
    "website:build": "bun run website/build.ts",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@apidevtools/json-schema-ref-parser": "^15.2.2",
    "@effect/eslint-plugin": "^0.3.2",
    "@effect/language-service": "0.74.0",
    "@eslint/compat": "^2.0.2",
    "@eslint/js": "^9.39.3",
    "@playwright/test": "^1.58.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@testcontainers/postgresql": "^11.12.0",
    "@types/bun": "^1.3.9",
    "@types/dompurify": "^3.2.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.3.0",
    "@types/nodemailer": "^7.0.10",
    "@types/pg": "^8.16.0",
    "@types/react-dom": "^19.2.3",
    "drizzle-kit": "^0.31.9",
    "eslint": "9.39.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-boundaries": "^5.4.0",
    "eslint-plugin-check-file": "^3.3.1",
    "eslint-plugin-drizzle": "^0.2.3",
    "eslint-plugin-functional": "^9.0.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-playwright": "^2.7.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "eslint-plugin-unicorn": "63.0.0",
    "glob": "^13.0.6",
    "globals": "^17.3.0",
    "knip": "^5.84.1",
    "otplib": "^13.3.0",
    "pg": "^8.18.0",
    "playwright": "^1.58.2",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "semantic-release": "^25.0.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@effect/cli": "^0.73.2",
    "@effect/experimental": "^0.58.0",
    "@effect/platform": "^0.94.5",
    "@effect/platform-bun": "^0.87.1",
    "@hono/zod-openapi": "^1.2.2",
    "@hono/zod-validator": "^0.7.6",
    "@hookform/resolvers": "^5.2.2",
    "@scalar/hono-api-reference": "^0.9.44",
    "@tailwindcss/postcss": "^4.2.0",
    "@tanstack/react-query": "^5.90.21",
    "@tanstack/react-query-devtools": "^5.91.3",
    "@tanstack/react-table": "^8.21.3",
    "better-auth": "^1.4.18",
    "dompurify": "^3.3.1",
    "drizzle-orm": "^0.45.1",
    "effect": "^3.19.19",
    "hono": "^4.12.0",
    "jiti": "^2.6.1",
    "js-yaml": "^4.1.1",
    "lucide-react": "^0.575.0",
    "nanoid": "^5.1.6",
    "nodemailer": "8.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-hook-form": "^7.71.1",
    "tailwindcss": "^4.2.0",
    "tw-animate-css": "^1.4.0",
    "zod": "^4.3.6"
  }
}
